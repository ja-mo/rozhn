{
  "id": 54,
  "name": "The Moon",
  "verses": [
    {
      "id": 4847,
      "verse_number": 1,
      "verse_key": "54:1",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 528,
      "juz_number": 27,
      "translations": [
        {
          "id": 927512,
          "resource_id": 135,
          "text": "قیامت نزدیک شد و ماه [از هم] شکافت."
        }
      ]
    },
    {
      "id": 4848,
      "verse_number": 2,
      "verse_key": "54:2",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 528,
      "juz_number": 27,
      "translations": [
        {
          "id": 927513,
          "resource_id": 135,
          "text": "اگر [کافران] معجزه‌ای ببینند، روی می‌گردانند و می‌گویند: «[این] جادویی [باطل و] زودگذر است»."
        }
      ]
    },
    {
      "id": 4849,
      "verse_number": 3,
      "verse_key": "54:3",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 528,
      "juz_number": 27,
      "translations": [
        {
          "id": 927514,
          "resource_id": 135,
          "text": "آنان [آیات و نشانه‌های الهی را] دروغ می‌پندارند و از هوای نفس خویش پیروی می‌کنند؛ و هر امرى [از پاداش و کیفرهای قیامت] در زمان مخصوص به خود قرار دارد."
        }
      ]
    },
    {
      "id": 4850,
      "verse_number": 4,
      "verse_key": "54:4",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 528,
      "juz_number": 27,
      "translations": [
        {
          "id": 927515,
          "resource_id": 135,
          "text": "و مطمئناً [ماجرای عذاب اقوام گذشته و] اخبارى كه باعث دست کشیدن از گناه می‌شود، به مشرکان رسیده است."
        }
      ]
    },
    {
      "id": 4851,
      "verse_number": 5,
      "verse_key": "54:5",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 528,
      "juz_number": 27,
      "translations": [
        {
          "id": 927516,
          "resource_id": 135,
          "text": "این [آیات الهى، دانش و] حکمتی رساست؛ ولى [برای افراد لجوج،] هشدارها سودی ندارد؛"
        }
      ]
    },
    {
      "id": 4852,
      "verse_number": 6,
      "verse_key": "54:6",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 528,
      "juz_number": 27,
      "translations": [
        {
          "id": 927517,
          "resource_id": 135,
          "text": "پس [ای پیامبر،] از آنان روى برتاب [و منتظر] روزى [باش] كه [فرشتۀ] دعوت‌كننده [با دمیدن در صور] آنان را به امرى بس دشوار [و وحشتناک] فرا‌بخوانَد."
        }
      ]
    },
    {
      "id": 4853,
      "verse_number": 7,
      "verse_key": "54:7",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927518,
          "resource_id": 135,
          "text": "با دیدگانِ فروافتاده [از وحشت] از گورها خارج می‌شوند؛ [حرکتشان به سوی دادگاه الهی، چنان است که] گویى ملخ‌هایی پراكنده‌اند."
        }
      ]
    },
    {
      "id": 4854,
      "verse_number": 8,
      "verse_key": "54:8",
      "hizb_number": 53,
      "rub_el_hizb_number": 211,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927519,
          "resource_id": 135,
          "text": "[هراسناک] به سوى مُنادىِ [محشر] می‌شتابند و کافران مى‌گویند: «امروز، روز دشوارى است»."
        }
      ]
    },
    {
      "id": 4855,
      "verse_number": 9,
      "verse_key": "54:9",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927520,
          "resource_id": 135,
          "text": "پیش از آنان، قوم نوح [نیز پیامبرشان را] تكذیب کردند و بندۀ ما را دروغگو خواندند و گفتند: «دیوانه است»؛ و او را سخت آزردند؛"
        }
      ]
    },
    {
      "id": 4856,
      "verse_number": 10,
      "verse_key": "54:10",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927521,
          "resource_id": 135,
          "text": "تا آنجا که او پروردگارش را خواند [و گفت]: «من مغلوب شده‌ام؛ پس یاری‌ام فرما [و از آنان انتقام بگیر]»."
        }
      ]
    },
    {
      "id": 4857,
      "verse_number": 11,
      "verse_key": "54:11",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927522,
          "resource_id": 135,
          "text": "ما نیز درهاى آسمان را براى [ریزشِ] رگبارى سیل‌آسا گشودیم."
        }
      ]
    },
    {
      "id": 4858,
      "verse_number": 12,
      "verse_key": "54:12",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927523,
          "resource_id": 135,
          "text": "و از زمین نیز چشمه‌ها جارى ساختیم و آبها [از زمین و آسمان] براى طوفانى كه مقدر شده بود، به هم پیوست."
        }
      ]
    },
    {
      "id": 4859,
      "verse_number": 13,
      "verse_key": "54:13",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927524,
          "resource_id": 135,
          "text": "و نوح را بر [كشتىِ] ساخته و پرداخته از تخته‌ها و میخ‌ها سوار كردیم"
        }
      ]
    },
    {
      "id": 4860,
      "verse_number": 14,
      "verse_key": "54:14",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927525,
          "resource_id": 135,
          "text": "كه تحت نظر [و حفاظتِ] ما حركت مى‌كرد. این، پاداش كسى بود كه [قومش] او را انکار کرده بودند."
        }
      ]
    },
    {
      "id": 4861,
      "verse_number": 15,
      "verse_key": "54:15",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927526,
          "resource_id": 135,
          "text": "ما آن [کیفر و نجات] را نشانه‌اى [از قدرتِ خود] بر جاى گذاشتیم؛ آیا پندپذیرى هست؟"
        }
      ]
    },
    {
      "id": 4862,
      "verse_number": 16,
      "verse_key": "54:16",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927527,
          "resource_id": 135,
          "text": "[بنگرید] که عذاب و هشدارهای من چگونه بود."
        }
      ]
    },
    {
      "id": 4863,
      "verse_number": 17,
      "verse_key": "54:17",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927528,
          "resource_id": 135,
          "text": "به راستی که قرآن را براى پند گرفتن آسان ساختیم؛ آیا پندپذیرى هست؟"
        }
      ]
    },
    {
      "id": 4864,
      "verse_number": 18,
      "verse_key": "54:18",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927529,
          "resource_id": 135,
          "text": "قوم عاد [نیز پیامبرشان را] دروغگو پنداشتند؛ [ای اهل مکه، بنگرید که] عذاب و هشدار‌های من چگونه بود."
        }
      ]
    },
    {
      "id": 4865,
      "verse_number": 19,
      "verse_key": "54:19",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927530,
          "resource_id": 135,
          "text": "ما تندبادى سرد و سخت را در یک روز شوم و طولانی بر آنان فرستادیم."
        }
      ]
    },
    {
      "id": 4866,
      "verse_number": 20,
      "verse_key": "54:20",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927531,
          "resource_id": 135,
          "text": "[طوفانی وحشتناک] كه مردم را چنان از جاى مى‌كَنْد که گویى تنه‌های نخلِ ریشه‌كن‌شده بودند."
        }
      ]
    },
    {
      "id": 4867,
      "verse_number": 21,
      "verse_key": "54:21",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927532,
          "resource_id": 135,
          "text": "[ای اهل مکه، بنگرید که] عذاب و هشدار‌های من چگونه بود."
        }
      ]
    },
    {
      "id": 4868,
      "verse_number": 22,
      "verse_key": "54:22",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 465,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927533,
          "resource_id": 135,
          "text": "به راستی که قرآن را براى پندگرفتن آسان ساختیم؛ آیا پندپذیرى هست؟"
        }
      ]
    },
    {
      "id": 4869,
      "verse_number": 23,
      "verse_key": "54:23",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927534,
          "resource_id": 135,
          "text": "قوم ثمود [نیز] هشداردهندگان را دروغگو پنداشتند."
        }
      ]
    },
    {
      "id": 4870,
      "verse_number": 24,
      "verse_key": "54:24",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927535,
          "resource_id": 135,
          "text": "آنان گفتند: «آیا [سزاوار است] بشرى از میان خودمان را پیروى كنیم؟ در این صورت، در گمراهى و سردرگمى خواهیم بود."
        }
      ]
    },
    {
      "id": 4871,
      "verse_number": 25,
      "verse_key": "54:25",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927536,
          "resource_id": 135,
          "text": "آیا از میان همۀ ما، تنها بر او وحی نازل شده است؟ [چنین نیست؛] بلکه او دروغگویی خودپسند است»."
        }
      ]
    },
    {
      "id": 4872,
      "verse_number": 26,
      "verse_key": "54:26",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927537,
          "resource_id": 135,
          "text": "فردا خواهند دانست که دروغگوی خودپسند کیست."
        }
      ]
    },
    {
      "id": 4873,
      "verse_number": 27,
      "verse_key": "54:27",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 529,
      "juz_number": 27,
      "translations": [
        {
          "id": 927538,
          "resource_id": 135,
          "text": "[به صالح گفتیم:] «براى آزمایشِ آنان، ماده‌شترى [را كه درخواست كرده‌اند، از دلِ کوه به سویشان] خواهیم فرستاد؛ پس مراقبِ رفتارشان باش و [بر آزارشان] شكیبایى كن."
        }
      ]
    },
    {
      "id": 4874,
      "verse_number": 28,
      "verse_key": "54:28",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927539,
          "resource_id": 135,
          "text": "و به آنان اعلام كن كه آب [چاه،] بین آنان [و آن ماده‌شتر] سهمیه‌بندی شده است و هر کس باید در نوبت خود حاضر شود»."
        }
      ]
    },
    {
      "id": 4875,
      "verse_number": 29,
      "verse_key": "54:29",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927540,
          "resource_id": 135,
          "text": "ولى آنان همدستشان را ندا دادند؛ او نیز دست به كار شد و [شتر را] به قتل رساند."
        }
      ]
    },
    {
      "id": 4876,
      "verse_number": 30,
      "verse_key": "54:30",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927541,
          "resource_id": 135,
          "text": "[ای اهل مکه، بنگرید که] عذاب و هشدار‌های من چگونه بود."
        }
      ]
    },
    {
      "id": 4877,
      "verse_number": 31,
      "verse_key": "54:31",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927542,
          "resource_id": 135,
          "text": "ما بانگ مرگباری بر آنان فرستادیم؛ به‌ناگاه [همگی] همچون گیاه خشكیده[ی بازمانده از كومه‌ها و حصارهای ساخته‌شده با نی و علف،] خرد و ریز شدند."
        }
      ]
    },
    {
      "id": 4878,
      "verse_number": 32,
      "verse_key": "54:32",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927543,
          "resource_id": 135,
          "text": "به راستی که قرآن را براى پندگرفتن آسان ساختیم؛ آیا پندپذیرى هست؟"
        }
      ]
    },
    {
      "id": 4879,
      "verse_number": 33,
      "verse_key": "54:33",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927544,
          "resource_id": 135,
          "text": "قوم لوط [نیز] هشداردهندگان را دروغگو پنداشتند."
        }
      ]
    },
    {
      "id": 4880,
      "verse_number": 34,
      "verse_key": "54:34",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927545,
          "resource_id": 135,
          "text": "[ما نیز] طوفانى ریگ‌بار بر سرشان فرستادیم [كه همگی را هلاک کرد]؛ مگر خانوادۀ لوط كه سحرگاهان آنان را نجات دادیم."
        }
      ]
    },
    {
      "id": 4881,
      "verse_number": 35,
      "verse_key": "54:35",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927546,
          "resource_id": 135,
          "text": "[این نجات،] نعمتی از جانب ما بود؛ و به هر کس سپاسگزارى كند، این گونه پاداش مى‌دهیم."
        }
      ]
    },
    {
      "id": 4882,
      "verse_number": 36,
      "verse_key": "54:36",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927547,
          "resource_id": 135,
          "text": "لوط آنان را از کیفر [سخت] ما بیم داد؛ ولی آنان در برابر هشدار‌ها به مجادله [و ستیز] برخاستند."
        }
      ]
    },
    {
      "id": 4883,
      "verse_number": 37,
      "verse_key": "54:37",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927548,
          "resource_id": 135,
          "text": "آنان از لوط خواستند که مهمانانش را [برای کام‌جویی] در اختیار‌شان بگذارد؛ ما نیز چشمانشان را کور کردیم [و گفتیم:] «طعم عذاب و [نتیجۀ] هشدار‌هایم را بچشید»."
        }
      ]
    },
    {
      "id": 4884,
      "verse_number": 38,
      "verse_key": "54:38",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927549,
          "resource_id": 135,
          "text": "و صبحگاهان عذابى پایدار آنان را فراگرفت."
        }
      ]
    },
    {
      "id": 4885,
      "verse_number": 39,
      "verse_key": "54:39",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927550,
          "resource_id": 135,
          "text": "[و گفتیم:] «طعم عذاب و [نتیجۀ] هشدار‌هایم را بچشید»."
        }
      ]
    },
    {
      "id": 4886,
      "verse_number": 40,
      "verse_key": "54:40",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 466,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927551,
          "resource_id": 135,
          "text": "به راستی که قرآن را براى پندگرفتن آسان ساختیم؛ آیا پندپذیرى هست؟"
        }
      ]
    },
    {
      "id": 4887,
      "verse_number": 41,
      "verse_key": "54:41",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927552,
          "resource_id": 135,
          "text": "هشداردهندگان به سراغ فرعونیان [نیز] رفتند."
        }
      ]
    },
    {
      "id": 4888,
      "verse_number": 42,
      "verse_key": "54:42",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927553,
          "resource_id": 135,
          "text": "[ولى] آنان تمامى آیات ما را دروغ شمردند؛ ما نیز چنان [که شایستۀ پروردگار] شکست‌ناپذیرِ مقتدر [است،] آنان را عذاب کردیم."
        }
      ]
    },
    {
      "id": 4889,
      "verse_number": 43,
      "verse_key": "54:43",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927554,
          "resource_id": 135,
          "text": "[ای اهل مکه،] آیا کافران شما از آنان بهترند یا برای شما امان‌نامه‌ای در کتاب‌های [آسمانی پیشین نوشته شده] است؟"
        }
      ]
    },
    {
      "id": 4890,
      "verse_number": 44,
      "verse_key": "54:44",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927555,
          "resource_id": 135,
          "text": "یا می‌گویند: «ما جماعتی متحد و انتقام‌جو هستیم»."
        }
      ]
    },
    {
      "id": 4891,
      "verse_number": 45,
      "verse_key": "54:45",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927556,
          "resource_id": 135,
          "text": "به زودى [در جنگ بدر] جمعشان شکست می‌خورد و فرارى خواهند شد."
        }
      ]
    },
    {
      "id": 4892,
      "verse_number": 46,
      "verse_key": "54:46",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927557,
          "resource_id": 135,
          "text": "وعده‌گاهشان قیامت است كه [نسبت به میدان بدر، روزگارى بسیار] سخت‌تر و تلخ‌تر است."
        }
      ]
    },
    {
      "id": 4893,
      "verse_number": 47,
      "verse_key": "54:47",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927558,
          "resource_id": 135,
          "text": "گناهکاران در گمراهی و عذابند."
        }
      ]
    },
    {
      "id": 4894,
      "verse_number": 48,
      "verse_key": "54:48",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927559,
          "resource_id": 135,
          "text": "روزی‌که با چهره‌هایشان در آتش کشیده می‌شوند [و به آنان می‌گویند:] «آتش دوزخ را بچشید»."
        }
      ]
    },
    {
      "id": 4895,
      "verse_number": 49,
      "verse_key": "54:49",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 530,
      "juz_number": 27,
      "translations": [
        {
          "id": 927560,
          "resource_id": 135,
          "text": "بی‌تردید، ما هر چیزی را به ‌اندازه آفریده‌ایم؛"
        }
      ]
    },
    {
      "id": 4896,
      "verse_number": 50,
      "verse_key": "54:50",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 531,
      "juz_number": 27,
      "translations": [
        {
          "id": 927561,
          "resource_id": 135,
          "text": "و [چون چیزی را اراده نماییم] فرمان ما فقط یک [کلمه یعنی «کُن»] است؛ به سرعتِ یک چشم ‌بر هم ‌زدن [یا كمتر، انجام می‌پذیرد]."
        }
      ]
    },
    {
      "id": 4897,
      "verse_number": 51,
      "verse_key": "54:51",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 531,
      "juz_number": 27,
      "translations": [
        {
          "id": 927562,
          "resource_id": 135,
          "text": "به تحقیق که ما [در گذشته] امثال شما [کافران] را نابود کرده‌ایم؛ پس آیا پندپذیرى هست؟ [که از این امر عبرت بگیرد و از کفر باز ایستد]؟"
        }
      ]
    },
    {
      "id": 4898,
      "verse_number": 52,
      "verse_key": "54:52",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 531,
      "juz_number": 27,
      "translations": [
        {
          "id": 927563,
          "resource_id": 135,
          "text": "و تمام کارهایی که [بندگان] انجام داده‌اند در نامه‌هاى اعمال[شان] ثبت شده است؛"
        }
      ]
    },
    {
      "id": 4899,
      "verse_number": 53,
      "verse_key": "54:53",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 531,
      "juz_number": 27,
      "translations": [
        {
          "id": 927564,
          "resource_id": 135,
          "text": "و هر [عمل] کوچک و بزرگی [در آن] نوشته شده است."
        }
      ]
    },
    {
      "id": 4900,
      "verse_number": 54,
      "verse_key": "54:54",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 531,
      "juz_number": 27,
      "translations": [
        {
          "id": 927565,
          "resource_id": 135,
          "text": "پرهیزگاران در باغ‌ها و [کنار] جویبارهای [بهشتی] جای دارند؛"
        }
      ]
    },
    {
      "id": 4901,
      "verse_number": 55,
      "verse_key": "54:55",
      "hizb_number": 53,
      "rub_el_hizb_number": 212,
      "ruku_number": 467,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 531,
      "juz_number": 27,
      "translations": [
        {
          "id": 927566,
          "resource_id": 135,
          "text": "در مجلسى سرشار از راستی [و شایستگی] و نزد فرمانروایی مقتدر."
        }
      ]
    }
  ]
}