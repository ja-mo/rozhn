{
  "id": 45,
  "name": "The Crouching",
  "verses": [
    {
      "id": 4474,
      "verse_number": 1,
      "verse_key": "45:1",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927139,
          "resource_id": 135,
          "text": "حم [حا. میم]."
        }
      ]
    },
    {
      "id": 4475,
      "verse_number": 2,
      "verse_key": "45:2",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927140,
          "resource_id": 135,
          "text": "نزول [این] کتاب از جانب الله شکست‌ناپذیرِ حکیم است."
        }
      ]
    },
    {
      "id": 4476,
      "verse_number": 3,
      "verse_key": "45:3",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927141,
          "resource_id": 135,
          "text": "به راستى كه در آسمان‌ها و زمین، نشانه‌هایى [از قدرت الهى] براى مؤمنان [پدیدار] است."
        }
      ]
    },
    {
      "id": 4477,
      "verse_number": 4,
      "verse_key": "45:4",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927142,
          "resource_id": 135,
          "text": "و [نیز] در آفرینش خودتان و موجودات زنده‌اى كه [در زمین] پراكنده مى‌سازد، نشانه‌هایى [از توان و تدبیر الله] برای اهل یقین [آشکار] است."
        }
      ]
    },
    {
      "id": 4478,
      "verse_number": 5,
      "verse_key": "45:5",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927143,
          "resource_id": 135,
          "text": "و در گردش پیاپى شب و روز و رِزقى كه الله [به صورت باران] از آسمان مى‌فرستد و با آن، زمین را پس از خزان و خشكى‌اش زنده می‌سازد؛ و [نیز] در گردش بادها، نشانه‌هایى [از قدرت پروردگار،] برای خردورزان است."
        }
      ]
    },
    {
      "id": 4479,
      "verse_number": 6,
      "verse_key": "45:6",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927144,
          "resource_id": 135,
          "text": "[ای پیامبر،] اینها آیات و [نشانه‌های] الهی است كه به‌حق بر تو مى‌خوانیم. [به راستی، مشرکان] پس از [سخن] الله و آیاتش، كدام سخن را باور مى‌كنند؟"
        }
      ]
    },
    {
      "id": 4480,
      "verse_number": 7,
      "verse_key": "45:7",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927145,
          "resource_id": 135,
          "text": "وای بر هر دروغگوی گنهکاری!"
        }
      ]
    },
    {
      "id": 4481,
      "verse_number": 8,
      "verse_key": "45:8",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927146,
          "resource_id": 135,
          "text": "[آن کافری] كه آیات الهی را كه بر او خوانده مى‌شود، مى‌شنود؛ ولى متكبرانه بر مخالفت اصرار دارد؛ گویى آنها را نشنیده است؛ پس او را به عذابى دردناک بشارت بده."
        }
      ]
    },
    {
      "id": 4482,
      "verse_number": 9,
      "verse_key": "45:9",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927147,
          "resource_id": 135,
          "text": "[همان کسی که] چون بر گوشه‌اى از آیات ما واقف شود، آن را به سُخره مى‌گیرد. آنان عذابى خفت‌بار [در پیش] دارند."
        }
      ]
    },
    {
      "id": 4483,
      "verse_number": 10,
      "verse_key": "45:10",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927148,
          "resource_id": 135,
          "text": "پیش رویشان دوزخ است؛ و دستاوردشان و [یاوران و] كارسازانى كه به جاى الله برگزیده‌اند، هیچ سودی به حالشان نخواهند داشت؛ و عذابى سهمگین [در پیش] دارند."
        }
      ]
    },
    {
      "id": 4484,
      "verse_number": 11,
      "verse_key": "45:11",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 436,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927149,
          "resource_id": 135,
          "text": "این [قرآن، موجبِ] هدایت است؛ و كسانى كه آیات پروردگار‌شان را انكار می‌كنند، عذابی از سخت‌ترین عذاب‌های دردناک [دوزخ را در پیش] دارند."
        }
      ]
    },
    {
      "id": 4485,
      "verse_number": 12,
      "verse_key": "45:12",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927150,
          "resource_id": 135,
          "text": "الله همان ذاتی است كه دریاها را در خدمت شما گماشت تا کشتی‌ها به فرمانش در آن حرکت کنند و [شما بتوانید] از فضل او [روزى] بجویید؛ باشد که شکر به جای آورید."
        }
      ]
    },
    {
      "id": 4486,
      "verse_number": 13,
      "verse_key": "45:13",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 499,
      "juz_number": 25,
      "translations": [
        {
          "id": 927151,
          "resource_id": 135,
          "text": "آنچه را در آسمان‌ها و زمین است، از [رحمت] خویش در خدمت شما گماشت؛ كه در این [امر،] نشانه‌هایی [از لطف و قدرت الهی] برای اندیشمندان است."
        }
      ]
    },
    {
      "id": 4487,
      "verse_number": 14,
      "verse_key": "45:14",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927152,
          "resource_id": 135,
          "text": "[ای پیامبر] به مؤمنان بگو: «از كسانى كه به روزهاى الله [= روزهای پیروزی بر کفر و گرفتن انتقام از مشرکان] امیدى ندارند، درگذرند تا [الله در زمان مشخص، هر] گروهى را در برابر آنچه که انجام داده‌اند سزا دهد»."
        }
      ]
    },
    {
      "id": 4488,
      "verse_number": 15,
      "verse_key": "45:15",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927153,
          "resource_id": 135,
          "text": "هر کس کار شایسته‌ای انجام دهد، به سود خود و هر کس کار بدى كند، به زیان خود كرده است؛ آنگاه [براى محاسبه و جزا] به پیشگاه پروردگارتان بازگردانده مى‌شوید."
        }
      ]
    },
    {
      "id": 4489,
      "verse_number": 16,
      "verse_key": "45:16",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927154,
          "resource_id": 135,
          "text": "به بنی‌اسرائیل، کتاب [تورات و انجیل] و [علمِ] داوری [بین مردم] و نبوت بخشیدیم و از نعمت‌های پاكیزه، روزی‌شان دادیم و آنان را [به موهبت توحید] بر مردم زمانه برترى بخشیدیم؛"
        }
      ]
    },
    {
      "id": 4490,
      "verse_number": 17,
      "verse_key": "45:17",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927155,
          "resource_id": 135,
          "text": "و در امر [بازشناسی حق از باطل]، آیات روشنى در اختیارشان قرار دادیم؛ پس اختلاف نکردند مگر بعد از اینکه علم [و آگاهی] برایشان حاصل شد [و حجت بر آنان اقامه گشت، آنگاه] به سبب برتری‌جویی [و حسادتی] كه بینشان بود، اختلاف ورزیدند؛ قطعاً، پروردگارت روز قیامت دربارۀ آنچه [در دنیا] راجع به آن اختلاف می‌ورزیدند میان آنان داورى خواهد كرد."
        }
      ]
    },
    {
      "id": 4491,
      "verse_number": 18,
      "verse_key": "45:18",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927156,
          "resource_id": 135,
          "text": "آنگاه تو را بر روشی [روشن و كامل] از امر [دین] قرار دادیم؛ پس پیرو همان راه باش و از هوس‌های نادانان پیروى نكن."
        }
      ]
    },
    {
      "id": 4492,
      "verse_number": 19,
      "verse_key": "45:19",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927157,
          "resource_id": 135,
          "text": "آنان در برابر [عذاب] الله هیچ نفعی براى تو ندارند؛ ستمکاران [یاور و] كارساز یكدیگرند؛ و الله كارسازِ پرهیزگاران است."
        }
      ]
    },
    {
      "id": 4493,
      "verse_number": 20,
      "verse_key": "45:20",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927158,
          "resource_id": 135,
          "text": "این [قرآن] مایۀ بصیرت مردم است و هدایت و رحمتی برای اهل یقین است."
        }
      ]
    },
    {
      "id": 4494,
      "verse_number": 21,
      "verse_key": "45:21",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 437,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927159,
          "resource_id": 135,
          "text": "آیا كسانى كه مرتكب کارهای ناشایست شدند، پنداشته‌اند كه آنان را مانند کسانی قرار می‌دهیم که ایمان آورده و کارهای نیک انجام داده‌اند، به گونه‌اى كه زندگى و مرگشان [با آنان] یكسان باشد؟ چه بد داوری می‌کنند!"
        }
      ]
    },
    {
      "id": 4495,
      "verse_number": 22,
      "verse_key": "45:22",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 438,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 500,
      "juz_number": 25,
      "translations": [
        {
          "id": 927160,
          "resource_id": 135,
          "text": "الله آسمان‌ها و زمین را [هدفمند و] به‌حق آفرید تا [همه آزمایش شوند] و جزاى دستاوردهاى همه [بندگان] داده شود؛ بدون آنكه ظلمی به آنان شود."
        }
      ]
    },
    {
      "id": 4496,
      "verse_number": 23,
      "verse_key": "45:23",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 438,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927161,
          "resource_id": 135,
          "text": "آیا آن كسی را دیده‌ای كه آگاهانه هواى نفسش را به جاى معبود خود نشانده [و تسلیم آن شده] است؟ الله نیز او را گمراه ساخت و بر گوش و دلش مُهر [غفلت] نهاد و بر دیده‌اش پرده‌اى كشید؛ [اگر الله هدایتش نکند،] پس از الله چه كسى هدایتش خواهد كرد؟ آیا پند نمى‌گیرید؟"
        }
      ]
    },
    {
      "id": 4497,
      "verse_number": 24,
      "verse_key": "45:24",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 438,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927162,
          "resource_id": 135,
          "text": "[مشرکان] می‌گویند: «جز زندگى دنیاى ما هیچ [خبرى] نیست؛ زندگى مى‌كنیم و مى‌میریم؛ و این گردشِ روزگار است كه ما را به كامِ مرگ مى‌برد». آنان در مورد این [امر،] ناآگاه هستند و فقط از حدس و گمان پیروی می‌کنند."
        }
      ]
    },
    {
      "id": 4498,
      "verse_number": 25,
      "verse_key": "45:25",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 438,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927163,
          "resource_id": 135,
          "text": "و چون آیات روشنگر ما [در مورد قیامت] بر آنان خوانده می‌شود، دلیل [انكار]شان فقط این است كه مى‌گویند: «اگر راست مى‌گویید، نیاکانمان را [زنده کنید و] بازگردانید»."
        }
      ]
    },
    {
      "id": 4499,
      "verse_number": 26,
      "verse_key": "45:26",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 438,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927164,
          "resource_id": 135,
          "text": "[ای پیامبر، به آنان] بگو: « الله است كه شما را حیات مى‌بخشد و مرگ مى‌دهد؛ آنگاه شما را در روز قیامت ـ که هیچ تردیدی در [وقوع] آن نیست ـ جمع مى‌كند؛ ولى بیشتر مردم [این حقیقت را] نمى‌دانند»."
        }
      ]
    },
    {
      "id": 4500,
      "verse_number": 27,
      "verse_key": "45:27",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927165,
          "resource_id": 135,
          "text": "فرمانروایی آسمان‌ها و زمین از آنِ الله است و روزی که قیامت برپا شود، اهل باطل زیانکار خواهند بود."
        }
      ]
    },
    {
      "id": 4501,
      "verse_number": 28,
      "verse_key": "45:28",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927166,
          "resource_id": 135,
          "text": "[در آن روز] هر گروهى را [از وحشت حساب و جزا، خوار و] به‌زانودرآمده مى‌بینى؛ همه را براى [گرفتن] نامۀ اعمالشان فرامی‌خوانند [و به آنان خطاب می‌شود:] «امروز شما در برابر آنچه كرده‌اید، جزا مى‌بینید."
        }
      ]
    },
    {
      "id": 4502,
      "verse_number": 29,
      "verse_key": "45:29",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927167,
          "resource_id": 135,
          "text": "این نامۀ [اعمالِ شما نزد] ماست كه به‌حق بر شما گواهى مى‌دهد. ما [تمام] اعمالی را که انجام می‌دادید [دقیقاً] ثبت مى‌كردیم."
        }
      ]
    },
    {
      "id": 4503,
      "verse_number": 30,
      "verse_key": "45:30",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927168,
          "resource_id": 135,
          "text": "مؤمنان نیكوكار را پروردگارشان مشمول رحمت خویش قرار خواهد داد. این همان كامیابى آشكار است»."
        }
      ]
    },
    {
      "id": 4504,
      "verse_number": 31,
      "verse_key": "45:31",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927169,
          "resource_id": 135,
          "text": "ولى [به] کافران [خطاب می‌شود:] «مگر نه این بود كه در برابر آیات من كه بر شما عرضه مى‌شد، گردنكشى مى‌كردید و گروهى بزهكار بودید؟"
        }
      ]
    },
    {
      "id": 4505,
      "verse_number": 32,
      "verse_key": "45:32",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 501,
      "juz_number": 25,
      "translations": [
        {
          "id": 927170,
          "resource_id": 135,
          "text": "و چون گفته می‌شد: \"وعدۀ الله حق است و [در وقوع] قیامت هیچ تردیدی نیست\"، می‌گفتید: \"نمی‌دانیم قیامت چیست؛ [آن را] توهّمی بیش نمی‌دانیم و به یقین نرسیده‌ایم\"»."
        }
      ]
    },
    {
      "id": 4506,
      "verse_number": 33,
      "verse_key": "45:33",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 502,
      "juz_number": 25,
      "translations": [
        {
          "id": 927171,
          "resource_id": 135,
          "text": "رفتار زشتشان بر آنان آشكار مى‌شود و عذابى كه آن را مسخره مى‌كردند، دامنگیرشان خواهد شد."
        }
      ]
    },
    {
      "id": 4507,
      "verse_number": 34,
      "verse_key": "45:34",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 502,
      "juz_number": 25,
      "translations": [
        {
          "id": 927172,
          "resource_id": 135,
          "text": "[به آنان] گفته می‌شود: «امروز شما را [در عذاب دوزخ] رها می‌کنیم؛ چنان كه شما [نیز در دنیا نسبت] به دیدار امروز بی‌اعتنا بودید؛ و جایگاهتان آتش است و هیچ یاورى نخواهید داشت."
        }
      ]
    },
    {
      "id": 4508,
      "verse_number": 35,
      "verse_key": "45:35",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 502,
      "juz_number": 25,
      "translations": [
        {
          "id": 927173,
          "resource_id": 135,
          "text": "این [گرفتارى] از آن روست كه آیات الهی را مسخره می‌کردید و زندگى دنیا فریبتان داده بود». امروز [کافران را] از آتش بیرون نخواهند آورد و از آنان خواسته نمی‌شود که [با توبه و طاعت، پروردگارشان را از خود] خشنود سازند."
        }
      ]
    },
    {
      "id": 4509,
      "verse_number": 36,
      "verse_key": "45:36",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 502,
      "juz_number": 25,
      "translations": [
        {
          "id": 927174,
          "resource_id": 135,
          "text": "ستایش مخصوص الله است؛ پروردگار آسمان‌ها و زمین و تمامیِ جهانیان."
        }
      ]
    },
    {
      "id": 4510,
      "verse_number": 37,
      "verse_key": "45:37",
      "hizb_number": 50,
      "rub_el_hizb_number": 200,
      "ruku_number": 439,
      "manzil_number": 6,
      "sajdah_number": null,
      "page_number": 502,
      "juz_number": 25,
      "translations": [
        {
          "id": 927175,
          "resource_id": 135,
          "text": "بزرگی در آسمان‌ها و زمین از آنِ اوست؛ و او تعالی شکست‌ناپذیرِ حکیم است."
        }
      ]
    }
  ]
}