{
  "id": 82,
  "name": "The Cleaving",
  "verses": [
    {
      "id": 5830,
      "verse_number": 1,
      "verse_key": "82:1",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928495,
          "resource_id": 135,
          "text": "آنگاه ‌که آسمان شکافته شود،"
        }
      ]
    },
    {
      "id": 5831,
      "verse_number": 2,
      "verse_key": "82:2",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928496,
          "resource_id": 135,
          "text": "آنگاه ‌که ستارگان پراکنده شوند [و فرو ریزند]،"
        }
      ]
    },
    {
      "id": 5832,
      "verse_number": 3,
      "verse_key": "82:3",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928497,
          "resource_id": 135,
          "text": "و آنگاه ‌که دریا‌ها [به هم آمیزند و لبریز و] روان گردند،"
        }
      ]
    },
    {
      "id": 5833,
      "verse_number": 4,
      "verse_key": "82:4",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928498,
          "resource_id": 135,
          "text": "و آنگاه ‌که قبرها [برای براگیختن مردگان] زیر و رو شود،"
        }
      ]
    },
    {
      "id": 5834,
      "verse_number": 5,
      "verse_key": "82:5",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928499,
          "resource_id": 135,
          "text": "[در آن هنگام،] هر کس می‌داند چه چیزهایی را پیشاپیش فرستاده و چه چیزهایی را واپس نهاده [و بر جای گذاشته است]."
        }
      ]
    },
    {
      "id": 5835,
      "verse_number": 6,
      "verse_key": "82:6",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928500,
          "resource_id": 135,
          "text": "ای انسان، چه چیزی تو را [نسبت] به پروردگار بزرگوارت مغرور ساخته است؟"
        }
      ]
    },
    {
      "id": 5836,
      "verse_number": 7,
      "verse_key": "82:7",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928501,
          "resource_id": 135,
          "text": "آن [پروردگاری] که تو را آفرید، سپس به تو سر و سامان داد و آنگاه تو را متعادل و متناسب کرد."
        }
      ]
    },
    {
      "id": 5837,
      "verse_number": 8,
      "verse_key": "82:8",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928502,
          "resource_id": 135,
          "text": "و به هر شکلی [و صورتی] که خواست، تو را ترکیب نمود."
        }
      ]
    },
    {
      "id": 5838,
      "verse_number": 9,
      "verse_key": "82:9",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928503,
          "resource_id": 135,
          "text": "هرگز چنین نیست [که شما گمان می‌کنید]؛ بلکه شما [روز] جزا را تکذیب می‌کنید."
        }
      ]
    },
    {
      "id": 5839,
      "verse_number": 10,
      "verse_key": "82:10",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928504,
          "resource_id": 135,
          "text": "و بی‌گمان، نگهبانانی [از فرشتگان] بر شما گمارده شده‌اند."
        }
      ]
    },
    {
      "id": 5840,
      "verse_number": 11,
      "verse_key": "82:11",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928505,
          "resource_id": 135,
          "text": "که نویسندگانی بزرگوارند؛"
        }
      ]
    },
    {
      "id": 5841,
      "verse_number": 12,
      "verse_key": "82:12",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928506,
          "resource_id": 135,
          "text": "آنچه را انجام می‌دهید، می‌دانند [و اعمال نیک و بد شما را ثبت می‌کنند]."
        }
      ]
    },
    {
      "id": 5842,
      "verse_number": 13,
      "verse_key": "82:13",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928507,
          "resource_id": 135,
          "text": "مسلماً نیکوکاران در نعمت[های بهشت] هستند."
        }
      ]
    },
    {
      "id": 5843,
      "verse_number": 14,
      "verse_key": "82:14",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928508,
          "resource_id": 135,
          "text": "و یقیناً بدکاران در [آتش] جهنمند."
        }
      ]
    },
    {
      "id": 5844,
      "verse_number": 15,
      "verse_key": "82:15",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928509,
          "resource_id": 135,
          "text": "روز جزا به آن درمی‌آیند [و می‌سوزند]"
        }
      ]
    },
    {
      "id": 5845,
      "verse_number": 16,
      "verse_key": "82:16",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928510,
          "resource_id": 135,
          "text": "و هرگز آنان از آنجا به دور و [در امان] نباشند."
        }
      ]
    },
    {
      "id": 5846,
      "verse_number": 17,
      "verse_key": "82:17",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928511,
          "resource_id": 135,
          "text": "و تو چه ‌دانی که روز جزا چیست؟"
        }
      ]
    },
    {
      "id": 5847,
      "verse_number": 18,
      "verse_key": "82:18",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928512,
          "resource_id": 135,
          "text": "باز تو چه می‌دانی که روز جزا چیست؟"
        }
      ]
    },
    {
      "id": 5848,
      "verse_number": 19,
      "verse_key": "82:19",
      "hizb_number": 59,
      "rub_el_hizb_number": 235,
      "ruku_number": 526,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 587,
      "juz_number": 30,
      "translations": [
        {
          "id": 928513,
          "resource_id": 135,
          "text": "روزی‌که هیچ کس قادر به انجام کاری برای دیگری نیست؛ و در آن روز، حکم [و فرمان،] از آنِ الله است."
        }
      ]
    }
  ]
}