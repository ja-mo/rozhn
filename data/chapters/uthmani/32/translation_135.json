{
  "id": 32,
  "name": "The Prostration",
  "verses": [
    {
      "id": 3504,
      "verse_number": 1,
      "verse_key": "32:1",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926169,
          "resource_id": 135,
          "text": "الم [= الف. لام. میم]."
        }
      ]
    },
    {
      "id": 3505,
      "verse_number": 2,
      "verse_key": "32:2",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926170,
          "resource_id": 135,
          "text": "نزول این کتاب که در [حقانیت] آن هیچ شکی نیست، از جانب پروردگار جهانیان است."
        }
      ]
    },
    {
      "id": 3506,
      "verse_number": 3,
      "verse_key": "32:3",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926171,
          "resource_id": 135,
          "text": "[کافران] می‌گویند: «[محمد] آن را به دروغ [به پروردگارش] نسبت می‌دهد». [هرگز چنین نیست؛] بلکه آن [آیات، سخنِ] حقی از جانب پروردگار توست تا به قومی که پیش از تو [هیچ] بیم‌دهنده‌ای برایشان نیامده است، هشدار دهی؛ باشد که هدایت شوند."
        }
      ]
    },
    {
      "id": 3507,
      "verse_number": 4,
      "verse_key": "32:4",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926172,
          "resource_id": 135,
          "text": "الله همان ذاتی است که آسمان‌ها و زمین و آنچه را که میان آنهاست در شش روز آفرید؛ آنگاه [آن گونه كه شايسته جلال و مقام اوست] بر عرش قرار گرفت. شما هیچ کارساز و شفاعتگری جز او ندارید. آیا پند نمی‌گیرید؟"
        }
      ]
    },
    {
      "id": 3508,
      "verse_number": 5,
      "verse_key": "32:5",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926173,
          "resource_id": 135,
          "text": "کار [جهان هستی] را از آسمان تا زمین تدبیر می‌کند. آنگاه در روزی که بلندی‌اش، به حساب شما [انسان‌ها] هزار سال است، [این کارها] به سوی او بالا می‌رود."
        }
      ]
    },
    {
      "id": 3509,
      "verse_number": 6,
      "verse_key": "32:6",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926174,
          "resource_id": 135,
          "text": "این [پروردگار شماست:] دانای پنهان و آشکار، شکست‌ناپذیرِ مهربان."
        }
      ]
    },
    {
      "id": 3510,
      "verse_number": 7,
      "verse_key": "32:7",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926175,
          "resource_id": 135,
          "text": "[همان] ذاتی ‌که هر چه آفرید، به نیکو‌ترین [شکل] آفرید و آفرینش [نخستین] انسان را از گِل آغاز کرد."
        }
      ]
    },
    {
      "id": 3511,
      "verse_number": 8,
      "verse_key": "32:8",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926176,
          "resource_id": 135,
          "text": "سپس [تداوم‌] نسل او را از چکیدۀ آبی پست [و بی‌قدر] مقرّر کرد."
        }
      ]
    },
    {
      "id": 3512,
      "verse_number": 9,
      "verse_key": "32:9",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926177,
          "resource_id": 135,
          "text": "آنگاه [اندام] او را سامان داد و از روح خویش [= روحی که خود آفرید] در وی دمید؛ و [نعمتِ] گوش و چشم‌ و دل برایتان قرار داد. چه اندک سپاس می‌گزارید!"
        }
      ]
    },
    {
      "id": 3513,
      "verse_number": 10,
      "verse_key": "32:10",
      "hizb_number": 42,
      "rub_el_hizb_number": 165,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926178,
          "resource_id": 135,
          "text": "[مشرکان] می‌گویند: «آیا وقتی [مُردیم و] در زمین [تبدیل به خاک و] ناپدید شدیم، آفرینش جدیدی خواهیم یافت؟» بلکه آنان دیدار پروردگارشان را منکرند."
        }
      ]
    },
    {
      "id": 3514,
      "verse_number": 11,
      "verse_key": "32:11",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 360,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 415,
      "juz_number": 21,
      "translations": [
        {
          "id": 926179,
          "resource_id": 135,
          "text": "[ای پیامبر،] بگو: «فرشتۀ مرگ که بر شما گماشته شده است، جانتان را می‌گیرد؛ آنگاه به سوی پروردگارتان بازگردانده می‌شوید»."
        }
      ]
    },
    {
      "id": 3515,
      "verse_number": 12,
      "verse_key": "32:12",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926180,
          "resource_id": 135,
          "text": "و چون [در قیامت] گناهکاران را در پیشگاه پروردگارشان ببینی سر به زیر افکنده‌اند [و می‌گویند:] «پروردگارا، [اکنون حقیقت را] دیدیم و شنیدیم؛ پس ما را بازگردان تا کاری شایسته انجام دهیم. بی‌تردید، ما [به قیامت] یقین داریم»."
        }
      ]
    },
    {
      "id": 3516,
      "verse_number": 13,
      "verse_key": "32:13",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926181,
          "resource_id": 135,
          "text": "اگر می‌خواستیم، به هر‌ کسی [توفیق و] هدایتش را ارزانی می‌داشتیم؛ ليكن اين سخن از جانب من حتمى شده است كه: «دوزخ را از همۀ جنیان و آدمیان [کافر] پر خواهم کرد»."
        }
      ]
    },
    {
      "id": 3517,
      "verse_number": 14,
      "verse_key": "32:14",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926182,
          "resource_id": 135,
          "text": "[به آنان گفته می‌شود:] «به سزای آنکه دیدار امروزتان را فراموش ‌کردید، [عذاب سوزان را] بچشید. یقیناً ما [نیز] شما را [در آتش] رها کرده‌ایم و [اکنون] به سزای آنچه می‌کردید، عذاب جاودان را بچشید»."
        }
      ]
    },
    {
      "id": 3518,
      "verse_number": 15,
      "verse_key": "32:15",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": 9,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926183,
          "resource_id": 135,
          "text": "فقط کسانی به آیات ما ایمان می‌آورند که چون به آنها پند داده شوند، به سجده می‌افتند و پروردگارشان را به پاکی می‌ستایند و تکبر نمی‌ورزند."
        }
      ]
    },
    {
      "id": 3519,
      "verse_number": 16,
      "verse_key": "32:16",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926184,
          "resource_id": 135,
          "text": "[در دل شب،] از بسترها برمی‌خیزند و پروردگار‌شان را با بیم و امید [به نیایش] می‌خوانند و از آنچه به آنان روزی داده‌ایم انفاق می‌کنند."
        }
      ]
    },
    {
      "id": 3520,
      "verse_number": 17,
      "verse_key": "32:17",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926185,
          "resource_id": 135,
          "text": "هیچ کس نمی‌داند به [پاس] آنچه [این مؤمنان در دنیا] انجام می‌دهند، چه [بسیار پاداش‌ها که مایۀ شادمانی و] روشنی چشم‌هاست، برایشان نهفته است."
        }
      ]
    },
    {
      "id": 3521,
      "verse_number": 18,
      "verse_key": "32:18",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926186,
          "resource_id": 135,
          "text": "آیا [پاداش] کسی که مؤمن است همچون کسی است که نافرمان است؟ هرگز برابر نیستند."
        }
      ]
    },
    {
      "id": 3522,
      "verse_number": 19,
      "verse_key": "32:19",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926187,
          "resource_id": 135,
          "text": "اما کسانی که ایمان آورده‌اند و کارهای شایسته انجام داده‌اند، برایشان باغ‌ها[ی بهشتی] است؛ [این به عنوان] محلّ پذیرایی از [آنها] است به [پاس] آنچه می‌کردند."
        }
      ]
    },
    {
      "id": 3523,
      "verse_number": 20,
      "verse_key": "32:20",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 416,
      "juz_number": 21,
      "translations": [
        {
          "id": 926188,
          "resource_id": 135,
          "text": "و اما کسانی که نافرمانی کردند، جایگاهشان آتش [دوزخ] است. هر گاه بخواهند از آن خارج شوند، به آن بازگردانده می‌شوند و به آنان گفته می‌شود: «بچشید عذاب آتشی که همواره آن را انکار می‌کردید»."
        }
      ]
    },
    {
      "id": 3524,
      "verse_number": 21,
      "verse_key": "32:21",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926189,
          "resource_id": 135,
          "text": "یقیناً پیش از عذاب بزرگ [آخرت]، از عذاب نزدیک‌ [و سختی‌های این دنیا] به آنان می‌چشانیم؛ باشد که [به درگاه الهی] بازگردند."
        }
      ]
    },
    {
      "id": 3525,
      "verse_number": 22,
      "verse_key": "32:22",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 361,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926190,
          "resource_id": 135,
          "text": "کیست ستمکار‌تر از آن ‌کس که به آیات پروردگارش پند داده می‌شود، سپس از آن روی می‌گرداند؟ بی‌تردید، ما از گناهکاران انتقام می‌گیریم."
        }
      ]
    },
    {
      "id": 3526,
      "verse_number": 23,
      "verse_key": "32:23",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926191,
          "resource_id": 135,
          "text": "ما به موسی کتاب [تورات] دادیم ـ پس [ای پیامبر،] در مورد دیدار [خودت با] او [در شب اسراء و معراج] در تردید نباش‌ـ و آن [= تورات] را رهنمود بنی‌اسرائیل گرداندیم"
        }
      ]
    },
    {
      "id": 3527,
      "verse_number": 24,
      "verse_key": "32:24",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926192,
          "resource_id": 135,
          "text": "و چون آنان [بر عبادت و دوری از گناه] شکیبایی می‌کردند و به آیات ما یقین داشتند، پیشوایانی از میان آنان برگماشتیم که به فرمان ما [مردم را] هدایت می‌کردند."
        }
      ]
    },
    {
      "id": 3528,
      "verse_number": 25,
      "verse_key": "32:25",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926193,
          "resource_id": 135,
          "text": "مسلماً پروردگار‌‌‌‌‌ توست که روز قیامت در مورد آنچه اختلاف داشتند، میان آنان داوری می‌کند."
        }
      ]
    },
    {
      "id": 3529,
      "verse_number": 26,
      "verse_key": "32:26",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926194,
          "resource_id": 135,
          "text": "آیا برایشان روشن نشده است كه چه بسیار نسل‌هایی را پیش از آنان نابود كردیم كه [اکنون این کافران] در خانه‌های آنها راه مى‌روند؟ به راستی که در این [عذاب و نابودی] عبرت‌هاست. آیا [باز هم سخن حق را] نمی‌شنوند؟"
        }
      ]
    },
    {
      "id": 3530,
      "verse_number": 27,
      "verse_key": "32:27",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926195,
          "resource_id": 135,
          "text": "آیا ندیدند که ما باران را به سوی زمین خشک [و بی‌گیاه] می‌فرستیم و به وسیلۀ آن، کشتزاری پدید می‌آوریم که خود و چهارپایانشان از آن می‌خورند؟ آیا [نشانه‌های قدرتِ الله بر رستاخیز را] نمی‌بینند؟"
        }
      ]
    },
    {
      "id": 3531,
      "verse_number": 28,
      "verse_key": "32:28",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926196,
          "resource_id": 135,
          "text": "و [کافران] می‌گویند: «اگر راستگویید، این داوری [میان ما و شما] کی فرامی‌رسد؟»"
        }
      ]
    },
    {
      "id": 3532,
      "verse_number": 29,
      "verse_key": "32:29",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
      "sajdah_number": null,
      "page_number": 417,
      "juz_number": 21,
      "translations": [
        {
          "id": 926197,
          "resource_id": 135,
          "text": "بگو: «در روز داوری [که جدایی حق و باطل است]، ایمان آوردنِ کسانی که کفر ورزیدند سودی ندارد و به آنان مهلت [توبه] داده نمی‌شود»."
        }
      ]
    },
    {
      "id": 3533,
      "verse_number": 30,
      "verse_key": "32:30",
      "hizb_number": 42,
      "rub_el_hizb_number": 166,
      "ruku_number": 362,
      "manzil_number": 5,
