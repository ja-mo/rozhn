{
  "id": 104,
  "name": "The Traducer",
  "verses": [
    {
      "id": 6180,
      "verse_number": 1,
      "verse_key": "104:1",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": " وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928845,
          "resource_id": 135,
          "text": "وای بر هر غیبت‌کننده [و] عیبجوی‌!"
        }
      ]
    },
    {
      "id": 6181,
      "verse_number": 2,
      "verse_key": "104:2",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "ٱلَّذِى جَمَعَ مَالًا وَعَدَّدَهُۥ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928846,
          "resource_id": 135,
          "text": "[همان] کسی که مال فراونی گرد می‌آورد و آن را بارها می‌شمارد."
        }
      ]
    },
    {
      "id": 6182,
      "verse_number": 3,
      "verse_key": "104:3",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928847,
          "resource_id": 135,
          "text": "گمان می‌کند که مالَش او را جاودانه می‌سازد."
        }
      ]
    },
    {
      "id": 6183,
      "verse_number": 4,
      "verse_key": "104:4",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "كَلَّا ۖ لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928848,
          "resource_id": 135,
          "text": "هرگز چنین نیست [که او گمان می‌کند]؛ قطعاً در آتشِ درهم‌کوبنده انداخته خواهد شد."
        }
      ]
    },
    {
      "id": 6184,
      "verse_number": 5,
      "verse_key": "104:5",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928849,
          "resource_id": 135,
          "text": "و [ای پیامبر،] تو چه می‌دانی که آتشِ درهم‌کوبنده چیست؟"
        }
      ]
    },
    {
      "id": 6185,
      "verse_number": 6,
      "verse_key": "104:6",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "نَارُ ٱللَّهِ ٱلْمُوقَدَةُ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928850,
          "resource_id": 135,
          "text": "آتش برافروختۀ الهی است؛"
        }
      ]
    },
    {
      "id": 6186,
      "verse_number": 7,
      "verse_key": "104:7",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928851,
          "resource_id": 135,
          "text": "[آتشی] که بر دل‌ها چیره می‌گردد [و می‌سوزانَد]."
        }
      ]
    },
    {
      "id": 6187,
      "verse_number": 8,
      "verse_key": "104:8",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928852,
          "resource_id": 135,
          "text": "بی‌گمان، آن [آتش] بر آنان بسته شده [و از هر سو محاصره‌شان کرده] است."
        }
      ]
    },
    {
      "id": 6188,
      "verse_number": 9,
      "verse_key": "104:9",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 548,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "فِى عَمَدٍ مُّمَدَّدَةٍۭ",
      "page_number": 601,
      "juz_number": 30,
      "translations": [
        {
          "id": 928853,
          "resource_id": 135,
          "text": "[افروخته] در ستون‌های بلند است."
        }
      ]
    }
  ]
}