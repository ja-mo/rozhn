{
  "id": 1,
  "name": "The Opener",
  "verses": [
    {
      "id": 1,
      "verse_number": 1,
      "verse_key": "1:1",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 922666,
          "resource_id": 135,
          "text": "به نام الله بخشندۀ مهربان"
        }
      ]
    },
    {
      "id": 2,
      "verse_number": 2,
      "verse_key": "1:2",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "ٱلْحَمْدُ لِلَّهِ رَبِّ ٱلْعَـٰلَمِينَ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 922667,
          "resource_id": 135,
          "text": "تمام ستایش‌ها [و سپاس‌ها] از آنِ الله ـ پروردگار جهانیان‌ ـ است؛"
        }
      ]
    },
    {
      "id": 3,
      "verse_number": 3,
      "verse_key": "1:3",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 922668,
          "resource_id": 135,
          "text": "بخشندۀ مهربان است؛"
        }
      ]
    },
    {
      "id": 4,
      "verse_number": 4,
      "verse_key": "1:4",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "مَـٰلِكِ يَوْمِ ٱلدِّينِ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 922669,
          "resource_id": 135,
          "text": "مالک روزِ جزاست."
        }
      ]
    },
    {
      "id": 5,
      "verse_number": 5,
      "verse_key": "1:5",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 922670,
          "resource_id": 135,
          "text": "[پروردگارا] تنها تو را عبادت می‌کنیم و تنها از تو یاری [و مدد] می‌جوییم."
        }
      ]
    },
    {
      "id": 6,
      "verse_number": 6,
      "verse_key": "1:6",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "ٱهْدِنَا ٱلصِّرَٰطَ ٱلْمُسْتَقِيمَ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 922671,
          "resource_id": 135,
          "text": "ما را به راه راست هدایت فرما [و همواره در این راه، ثابت‌قدم بدار]؛"
        }
      ]
    },
    {
      "id": 7,
      "verse_number": 7,
      "verse_key": "1:7",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "صِرَٰطَ ٱلَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ ٱلْمَغْضُوبِ عَلَيْهِمْ وَلَا ٱلضَّآلِّينَ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 922672,
          "resource_id": 135,
          "text": "راه کسانی [همچون پیامبران، شهیدان، راستگویان و نیکوکاران] ‌که به آنان نعمت داده‌ای، نه [راه] کسانی که بر آنان خشم گرفته شده است [= یهود] و نه [راه] گمراهان [= نصاری]."
        }
      ]
    }
  ]
}