{
  "id": 15,
  "name": "The Rocky Tract",
  "verses": [
    {
      "id": 1803,
      "verse_number": 1,
      "verse_key": "15:1",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924468,
          "resource_id": 135,
          "text": "الر [= الف. لام. را]. این آیات كتاب [الهى] و قرآنِ روشنگر است."
        }
      ]
    },
    {
      "id": 1804,
      "verse_number": 2,
      "verse_key": "15:2",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924469,
          "resource_id": 135,
          "text": "چه بسا کافران [هنگام مواجهه با عذاب قیامت] آرزو ‌کنند که کاش مسلمان بودند."
        }
      ]
    },
    {
      "id": 1805,
      "verse_number": 3,
      "verse_key": "15:3",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924470,
          "resource_id": 135,
          "text": "بگذار بخورند و [از لذت‌های دنیا] بهره‌مند شوند و آرزوها[ی مادّی،] سرگرمشان سازد؛ پس به زودی خواهند دانست."
        }
      ]
    },
    {
      "id": 1806,
      "verse_number": 4,
      "verse_key": "15:4",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924471,
          "resource_id": 135,
          "text": "ما [ساکنان] هیچ [شهر و] دیاری را هلاک نکردیم؛ مگر اینکه [مهلت و] اَجلی معیّن داشتند."
        }
      ]
    },
    {
      "id": 1807,
      "verse_number": 5,
      "verse_key": "15:5",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924472,
          "resource_id": 135,
          "text": "هیچ امتى از اَجلِ [مقررِ] خود نه پیشى می‌گیرد و نه [از آن] عقب می‌مانَد."
        }
      ]
    },
    {
      "id": 1808,
      "verse_number": 6,
      "verse_key": "15:6",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924473,
          "resource_id": 135,
          "text": "[کافران] گفتند: «ای کسی‌ که [ادعا می‌کنی] قرآن بر تو نازل شده است، یقیناً تو دیوانه‌ای."
        }
      ]
    },
    {
      "id": 1809,
      "verse_number": 7,
      "verse_key": "15:7",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924474,
          "resource_id": 135,
          "text": "اگر راست می‌گویی، چرا فرشتگان را نزدمان نمی‌آوری [تا دربارۀ پیامبری‌ات گواهی دهند]؟»"
        }
      ]
    },
    {
      "id": 1810,
      "verse_number": 8,
      "verse_key": "15:8",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924475,
          "resource_id": 135,
          "text": "[باید بدانند که‌] ما فرشتگان را به‌حق [و فقط در هنگام عذاب کافران] نازل می‌کنیم؛ و [اگر برای عذابشان نازل شوند] دیگر مهلتی نمی‌یابند."
        }
      ]
    },
    {
      "id": 1811,
      "verse_number": 9,
      "verse_key": "15:9",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924476,
          "resource_id": 135,
          "text": "به راستی که ما خود، قرآن را نازل کردیم و قطعاً خودمان نیز نگهبان آن [از هر گونه تبدیل و تحریفی] هستیم."
        }
      ]
    },
    {
      "id": 1812,
      "verse_number": 10,
      "verse_key": "15:10",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924477,
          "resource_id": 135,
          "text": "[ای پیامبر،] پیش از تو نیز [رسولان خود را] میان گروه‌های پیشین فرستادیم."
        }
      ]
    },
    {
      "id": 1813,
      "verse_number": 11,
      "verse_key": "15:11",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924478,
          "resource_id": 135,
          "text": "هیچ پیامبری نزدشان نمی‌آمد، مگر آنکه مسخره‌اش می‌کردند."
        }
      ]
    },
    {
      "id": 1814,
      "verse_number": 12,
      "verse_key": "15:12",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924479,
          "resource_id": 135,
          "text": "اینچنین آن [تکذیب و تمسخر] را در دل‌های گناهکاران [= کافران] راه می‌دهیم."
        }
      ]
    },
    {
      "id": 1815,
      "verse_number": 13,
      "verse_key": "15:13",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924480,
          "resource_id": 135,
          "text": "آنان به آن [قرآن] ایمان نمی‌آورند؛ و شیوۀ [الله در مجازات] پیشینیان [نیز چنین] رفته است [كه آنان را با عذابی دردناک هلاک نماید]."
        }
      ]
    },
    {
      "id": 1816,
      "verse_number": 14,
      "verse_key": "15:14",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924481,
          "resource_id": 135,
          "text": "و [حتی] اگر دری از آسمان به روی آنان می‌گشودیم تا پیوسته در آن بالا روند [و شگفتی‌های ملکوت را ببینند]،"
        }
      ]
    },
    {
      "id": 1817,
      "verse_number": 15,
      "verse_key": "15:15",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 218,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 262,
      "juz_number": 14,
      "translations": [
        {
          "id": 924482,
          "resource_id": 135,
          "text": "یقیناً باز هم می‌گفتند: «بی‌تردید، ما را چشم‌بندی کرده‌اند؛ بلکه ما گروهی جادو‌شده‌ایم»."
        }
      ]
    },
    {
      "id": 1818,
      "verse_number": 16,
      "verse_key": "15:16",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924483,
          "resource_id": 135,
          "text": "و به راستی، ما برجهایی در آسمان قرار داده‌ایم و آن را برای تماشاگران آراسته‌ایم."
        }
      ]
    },
    {
      "id": 1819,
      "verse_number": 17,
      "verse_key": "15:17",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924484,
          "resource_id": 135,
          "text": "و آن [= آسمان] را از [ورود و دستبردِ] هر شیطانِ رانده‌شده‌ای حفظ کردیم."
        }
      ]
    },
    {
      "id": 1820,
      "verse_number": 18,
      "verse_key": "15:18",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924485,
          "resource_id": 135,
          "text": "مگر آن کس که دزدانه سخنی [از ملکوتیان] بشنود که [در آن صورت،] شهابی روشن او را دنبال می‌کند [و می‌سوزاند]."
        }
      ]
    },
    {
      "id": 1821,
      "verse_number": 19,
      "verse_key": "15:19",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924486,
          "resource_id": 135,
          "text": "و زمین را گستردیم و کوه‌های استواری در آن افکندیم و از هر گیاه سنجیده [و مناسبی] در آن رویاندیم."
        }
      ]
    },
    {
      "id": 1822,
      "verse_number": 20,
      "verse_key": "15:20",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924487,
          "resource_id": 135,
          "text": "و براى شما و کسانی كه روزى‌دهنده آنان نیستید اسباب زندگی در آن قرار دادیم."
        }
      ]
    },
    {
      "id": 1823,
      "verse_number": 21,
      "verse_key": "15:21",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924488,
          "resource_id": 135,
          "text": "و هیچ چیز نیست، مگر آنکه گنجینه‌هایش نزد ماست و ما آن را جز به ‌اندازه‌ای معیّن فرو نمی‌فرستیم."
        }
      ]
    },
    {
      "id": 1824,
      "verse_number": 22,
      "verse_key": "15:22",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924489,
          "resource_id": 135,
          "text": "و بادها را بارورکننده[ی ابرها] فرستادیم، سپس آبی از آسمان‌ها نازل کردیم و شما را با آن سیراب ساختیم؛ در حالى كه شما ذخیره‌كننده‌اش نیستید."
        }
      ]
    },
    {
      "id": 1825,
      "verse_number": 23,
      "verse_key": "15:23",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924490,
          "resource_id": 135,
          "text": "و یقیناً ماییم که زنده می‌کنیم و می‌میرانیم، و ما [بازماندۀ جاوید و] وارث [همۀ جهانیان] هستیم."
        }
      ]
    },
    {
      "id": 1826,
      "verse_number": 24,
      "verse_key": "15:24",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924491,
          "resource_id": 135,
          "text": "و بی‌تردید، [تولد و مرگ] گذشتگان شما را دانسته‌ایم و یقیناً [تولد و مرگ] آیندگان را [نیز به خوبی] می‌دانیم."
        }
      ]
    },
    {
      "id": 1827,
      "verse_number": 25,
      "verse_key": "15:25",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 219,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924492,
          "resource_id": 135,
          "text": "و [ای پیامبر،] بی‌گمان، پروردگارت [همۀ] آنان را [در قیامت] محشور می‌کند. به راستی که او حکیم داناست."
        }
      ]
    },
    {
      "id": 1828,
      "verse_number": 26,
      "verse_key": "15:26",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924493,
          "resource_id": 135,
          "text": "و در حقیقت، ما [نخستین] انسان [= آدم] را از گِلِ خشک [بازمانده] از لجنی بدبو آفریدیم‌."
        }
      ]
    },
    {
      "id": 1829,
      "verse_number": 27,
      "verse_key": "15:27",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924494,
          "resource_id": 135,
          "text": "و پیش از آن، جن را از آتشی سوزان و بى‌دود آفریدیم."
        }
      ]
    },
    {
      "id": 1830,
      "verse_number": 28,
      "verse_key": "15:28",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924495,
          "resource_id": 135,
          "text": "و [یاد کن] از هنگامی که پروردگارت به فرشتگان فرمود: «همانا من بشری را از گِلِ خشک [بازمانده] از لجنی بدبو خواهم آفرید."
        }
      ]
    },
    {
      "id": 1831,
      "verse_number": 29,
      "verse_key": "15:29",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924496,
          "resource_id": 135,
          "text": "پس چون [او را آفریدم و] به او سامان دادم و از روح خویش در وی دمیدم، [به نشانۀ اطاعت از فرمان من، همگی] بر او سجده کنید»."
        }
      ]
    },
    {
      "id": 1832,
      "verse_number": 30,
      "verse_key": "15:30",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924497,
          "resource_id": 135,
          "text": "فرشتگان همگی سجده کردند،"
        }
      ]
    },
    {
      "id": 1833,
      "verse_number": 31,
      "verse_key": "15:31",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 263,
      "juz_number": 14,
      "translations": [
        {
          "id": 924498,
          "resource_id": 135,
          "text": "مگر ابلیس که سرپیچی کرد از اینکه با سجده‌کنندگان باشد."
        }
      ]
    },
    {
      "id": 1834,
      "verse_number": 32,
      "verse_key": "15:32",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924499,
          "resource_id": 135,
          "text": "[الله] فرمود: «ای ابلیس، چرا تو با سجده‌کنندگان [همراه] نیستی؟»"
        }
      ]
    },
    {
      "id": 1835,
      "verse_number": 33,
      "verse_key": "15:33",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924500,
          "resource_id": 135,
          "text": "[ابلیس] گفت: «من آن نیستم که برای بشری که او را از گِلِ خشک [بازمانده] از لجنی بدبو آفریده‌ای سجده ‌کنم»."
        }
      ]
    },
    {
      "id": 1836,
      "verse_number": 34,
      "verse_key": "15:34",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924501,
          "resource_id": 135,
          "text": "[الله] فرمود: «از آنجا [= بهشت] بیرون شو [که] بی‌تردید، تو [از بارگاهِ ما] رانده‌شده‌ای."
        }
      ]
    },
    {
      "id": 1837,
      "verse_number": 35,
      "verse_key": "15:35",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924502,
          "resource_id": 135,
          "text": "و یقیناً تا روز قیامت بر تو لعنت خواهد بود»."
        }
      ]
    },
    {
      "id": 1838,
      "verse_number": 36,
      "verse_key": "15:36",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924503,
          "resource_id": 135,
          "text": "[ابلیس] گفت: «پروردگارا، تا روزی ‌که [مردم] برانگیخته می‌شوند به من مهلت بده [و مرا نمیران]»."
        }
      ]
    },
    {
      "id": 1839,
      "verse_number": 37,
      "verse_key": "15:37",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924504,
          "resource_id": 135,
          "text": "[الله] فرمود: «[برو که] یقیناً تو از مهلت‌یافتگانی،"
        }
      ]
    },
    {
      "id": 1840,
      "verse_number": 38,
      "verse_key": "15:38",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924505,
          "resource_id": 135,
          "text": "تا روزِ آن وقتِ معلوم [که تمام مخلوقات با نفخۀ نخست می‌میرند]»."
        }
      ]
    },
    {
      "id": 1841,
      "verse_number": 39,
      "verse_key": "15:39",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924506,
          "resource_id": 135,
          "text": "[او] گفت: «پروردگارا، به سببِ آنکه مرا گمراه ساختی، [من نیز] در زمین [بدی‌ها را] در نظرشان نیک جلوه می‌دهم و همۀ آنان را به گمراهی می‌کشانم؛"
        }
      ]
    },
    {
      "id": 1842,
      "verse_number": 40,
      "verse_key": "15:40",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924507,
          "resource_id": 135,
          "text": "مگر بندگان خالصِ تو از [میان] آنان، [که هدایتشان کرده‌ای]»."
        }
      ]
    },
    {
      "id": 1843,
      "verse_number": 41,
      "verse_key": "15:41",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924508,
          "resource_id": 135,
          "text": "[الله] فرمود: «این [اخلاص،] راه مستقیمی است [که به من می‌رسد]."
        }
      ]
    },
    {
      "id": 1844,
      "verse_number": 42,
      "verse_key": "15:42",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924509,
          "resource_id": 135,
          "text": "یقیناً تو بر بندگانم تسلطی نداری، مگر [بر آن مشرکان و] گمراهانی که از تو پیروی می‌کنند."
        }
      ]
    },
    {
      "id": 1845,
      "verse_number": 43,
      "verse_key": "15:43",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924510,
          "resource_id": 135,
          "text": "و بی‌تردید، دوزخ وعده‌گاه همۀ آنان است."
        }
      ]
    },
    {
      "id": 1846,
      "verse_number": 44,
      "verse_key": "15:44",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 220,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924511,
          "resource_id": 135,
          "text": "[دوزخ] هفت در دارد [و] برای هر دری، گروهی از آنان تقسیم [و مشخص] شده‌اند»."
        }
      ]
    },
    {
      "id": 1847,
      "verse_number": 45,
      "verse_key": "15:45",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924512,
          "resource_id": 135,
          "text": "یقیناً پرهیزگاران در باغ‌ها[ی بهشت] و در [کنار] چشمه‌ها هستند."
        }
      ]
    },
    {
      "id": 1848,
      "verse_number": 46,
      "verse_key": "15:46",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924513,
          "resource_id": 135,
          "text": "[هنگام ورود به آنان گفته می‌شود:] «به سلامت و ایمنی به آن [باغ‌ها] وارد شوید»."
        }
      ]
    },
    {
      "id": 1849,
      "verse_number": 47,
      "verse_key": "15:47",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924514,
          "resource_id": 135,
          "text": "آنچه از کینه [و حسد که] در دل‌هایشان است برمی‌کنیم؛ برادرانه بر تخت‌ها مقابل یکدیگرند."
        }
      ]
    },
    {
      "id": 1850,
      "verse_number": 48,
      "verse_key": "15:48",
      "hizb_number": 27,
      "rub_el_hizb_number": 105,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924515,
          "resource_id": 135,
          "text": "در آنجا نه رنجى به آنان مى‌رسد و نه از آنجا بیرون رانده مى‌شوند."
        }
      ]
    },
    {
      "id": 1851,
      "verse_number": 49,
      "verse_key": "15:49",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924516,
          "resource_id": 135,
          "text": "[ای پیامبر،] به بندگانم خبر بده که من آمرزندۀ مهربانم."
        }
      ]
    },
    {
      "id": 1852,
      "verse_number": 50,
      "verse_key": "15:50",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924517,
          "resource_id": 135,
          "text": "و اینکه عذاب من، عذابی دردناک است."
        }
      ]
    },
    {
      "id": 1853,
      "verse_number": 51,
      "verse_key": "15:51",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 264,
      "juz_number": 14,
      "translations": [
        {
          "id": 924518,
          "resource_id": 135,
          "text": "و از مهمانان ابراهیم [نیز] به آنان خبر بده."
        }
      ]
    },
    {
      "id": 1854,
      "verse_number": 52,
      "verse_key": "15:52",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924519,
          "resource_id": 135,
          "text": "هنگامی که بر او وارد شدند، سلام گفتند؛ [اما چون دست به غذا نبردند، ابراهیم‌] گفت: «ما از شما هراسانیم»."
        }
      ]
    },
    {
      "id": 1855,
      "verse_number": 53,
      "verse_key": "15:53",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924520,
          "resource_id": 135,
          "text": "آنان گفتند: «نترس؛ ما تو را به پسری دانا مژده می‌دهیم»."
        }
      ]
    },
    {
      "id": 1856,
      "verse_number": 54,
      "verse_key": "15:54",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924521,
          "resource_id": 135,
          "text": "[ابراهیم] گفت: «آیا با اینكه سالخورده شده‌ام مژده[ی تولد فرزند] به من مى‌دهید؟ به چه [دلیل اینچنین] بشارت مى‌دهید؟»"
        }
      ]
    },
    {
      "id": 1857,
      "verse_number": 55,
      "verse_key": "15:55",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924522,
          "resource_id": 135,
          "text": "آنان گفتند: «ما تو را به درستی بشارت دادیم؛ پس ناامید نباش»."
        }
      ]
    },
    {
      "id": 1858,
      "verse_number": 56,
      "verse_key": "15:56",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924523,
          "resource_id": 135,
          "text": "[ابراهیم] گفت: «و جز گمراهان، چه کسی از رحمتِ پروردگارش ناامید می‌گردد؟»"
        }
      ]
    },
    {
      "id": 1859,
      "verse_number": 57,
      "verse_key": "15:57",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924524,
          "resource_id": 135,
          "text": "[آنگاه به فرشتگان] گفت: «اى فرستادگان، كار [و مأموریت دیگر] شما چیست؟»"
        }
      ]
    },
    {
      "id": 1860,
      "verse_number": 58,
      "verse_key": "15:58",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924525,
          "resource_id": 135,
          "text": "آنان گفتند: «در حقیقت، ما به سوی قوم گنهکار [لوط] فرستاده شده‌ایم [تا هلاکشان کنیم]."
        }
      ]
    },
    {
      "id": 1861,
      "verse_number": 59,
      "verse_key": "15:59",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924526,
          "resource_id": 135,
          "text": "مگر خانوادۀ لوط که ما یقیناً همۀ آنان را نجات خواهیم داد."
        }
      ]
    },
    {
      "id": 1862,
      "verse_number": 60,
      "verse_key": "15:60",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 221,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924527,
          "resource_id": 135,
          "text": "جز همسرش که مقدر کرده‌ایم از بازماندگان [در عذاب] باشد»."
        }
      ]
    },
    {
      "id": 1863,
      "verse_number": 61,
      "verse_key": "15:61",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924528,
          "resource_id": 135,
          "text": "هنگامی‌ که فرستادگان [الله به شکل انسان] نزد خاندان لوط آمدند،"
        }
      ]
    },
    {
      "id": 1864,
      "verse_number": 62,
      "verse_key": "15:62",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924529,
          "resource_id": 135,
          "text": "[لوط] گفت: «شما گروهی ناشناس هستید»."
        }
      ]
    },
    {
      "id": 1865,
      "verse_number": 63,
      "verse_key": "15:63",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924530,
          "resource_id": 135,
          "text": "[فرشتگان] گفتند: «بلکه ما همان چیزی را برایت آورده‌ایم كه [این مردم گناهکار] درباره‌اش تردید مى‌كردند [= نزول عذاب]."
        }
      ]
    },
    {
      "id": 1866,
      "verse_number": 64,
      "verse_key": "15:64",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924531,
          "resource_id": 135,
          "text": "و ما برایت [خبرِ حقیقی و] راست آورده‌ایم و قطعاً ما راستگوییم."
        }
      ]
    },
    {
      "id": 1867,
      "verse_number": 65,
      "verse_key": "15:65",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924532,
          "resource_id": 135,
          "text": "پس پاسی از شب [که گذشت] خانواده‌ات را [از این جا] ببر و [خودت] به دنبالشان برو؛ و هیچ‌یک از شما [نباید] پشت سرش را نگاه نکند و به جایی که به شما فرمان می‌دهند بروید»."
        }
      ]
    },
    {
      "id": 1868,
      "verse_number": 66,
      "verse_key": "15:66",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924533,
          "resource_id": 135,
          "text": "و ما او [= لوط] را از این امر آگاه كردیم که صبحگاهان ریشۀ آنان برکنده خواهد شد."
        }
      ]
    },
    {
      "id": 1869,
      "verse_number": 67,
      "verse_key": "15:67",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924534,
          "resource_id": 135,
          "text": "و اهالی شهر، در حالی که [دربارۀ آمدن افراد جدید] با شادی‌ [به یکدیگر] خبر می‌دادند [به سوی خانۀ لوط] آمدند."
        }
      ]
    },
    {
      "id": 1870,
      "verse_number": 68,
      "verse_key": "15:68",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924535,
          "resource_id": 135,
          "text": "[لوط] گفت: «اینها مهمانان من هستند؛ پس مرا رسوا [و شرمندۀ مهمانانم] نکنید،"
        }
      ]
    },
    {
      "id": 1871,
      "verse_number": 69,
      "verse_key": "15:69",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924536,
          "resource_id": 135,
          "text": "و از الله بترسید و سرشکسته‌ام نسازید»."
        }
      ]
    },
    {
      "id": 1872,
      "verse_number": 70,
      "verse_key": "15:70",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 265,
      "juz_number": 14,
      "translations": [
        {
          "id": 924537,
          "resource_id": 135,
          "text": "[آنان] گفتند: «مگر ما تو را از [میزبانیِ] افراد [بیگانه] نهی نکردیم؟»"
        }
      ]
    },
    {
      "id": 1873,
      "verse_number": 71,
      "verse_key": "15:71",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924538,
          "resource_id": 135,
          "text": "[لوط] گفت: «اگر مى‌خواهید [كارى حلال‌] انجام دهید، اینها دختران [قوم] من هستند؛ [با آنها ازدواج كنید]»."
        }
      ]
    },
    {
      "id": 1874,
      "verse_number": 72,
      "verse_key": "15:72",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924539,
          "resource_id": 135,
          "text": "سوگند به جان تو [ای پیامبر] که آنان در مستیِ خویش سرگشته بودند."
        }
      ]
    },
    {
      "id": 1875,
      "verse_number": 73,
      "verse_key": "15:73",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924540,
          "resource_id": 135,
          "text": "پس هنگام برآمدنِ آفتاب، بانگ [مرگبار] آنان را فراگرفت."
        }
      ]
    },
    {
      "id": 1876,
      "verse_number": 74,
      "verse_key": "15:74",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924541,
          "resource_id": 135,
          "text": "آنگاه آن [سرزمین] را زیر و رو کردیم و سنگ‌گل‌هایی پیاپی بر آنان باریدیم."
        }
      ]
    },
    {
      "id": 1877,
      "verse_number": 75,
      "verse_key": "15:75",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924542,
          "resource_id": 135,
          "text": "به یقین، در این [كیفر،] براى هوشیاران عبرت‌هاست."
        }
      ]
    },
    {
      "id": 1878,
      "verse_number": 76,
      "verse_key": "15:76",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924543,
          "resource_id": 135,
          "text": "و [آثار] آن [شهرهای ویرانه، هنوز] بر سر راه [مسافران] پابرجاست."
        }
      ]
    },
    {
      "id": 1879,
      "verse_number": 77,
      "verse_key": "15:77",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924544,
          "resource_id": 135,
          "text": "یقیناً در این [عذاب،] نشانه‌ای برای [عبرت گرفتنِ] مؤمنان است."
        }
      ]
    },
    {
      "id": 1880,
      "verse_number": 78,
      "verse_key": "15:78",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924545,
          "resource_id": 135,
          "text": "و اصحاب اَیکه [= قوم شعیب] قطعاً ستمکار بودند."
        }
      ]
    },
    {
      "id": 1881,
      "verse_number": 79,
      "verse_key": "15:79",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 222,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924546,
          "resource_id": 135,
          "text": "[ما] از آنان انتقام گرفتیم و [شهرهای ویران‌شدۀ] این دو [قوم،] بر سر راه آشکار است."
        }
      ]
    },
    {
      "id": 1882,
      "verse_number": 80,
      "verse_key": "15:80",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924547,
          "resource_id": 135,
          "text": "و بی‌تردید، اهل حِجر [= قوم ثمود] پیامبران را دروغگو انگاشتند."
        }
      ]
    },
    {
      "id": 1883,
      "verse_number": 81,
      "verse_key": "15:81",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924548,
          "resource_id": 135,
          "text": "و [ما معجزات و] نشانه‌های خود را به آنان دادیم، و[لی] از آنها رویگردان شدند."
        }
      ]
    },
    {
      "id": 1884,
      "verse_number": 82,
      "verse_key": "15:82",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924549,
          "resource_id": 135,
          "text": "و از کوه‌ها خانه‌هایی [برای خود] می‌تراشیدند که در امان بمانند."
        }
      ]
    },
    {
      "id": 1885,
      "verse_number": 83,
      "verse_key": "15:83",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924550,
          "resource_id": 135,
          "text": "پس صبحگاهان بانگ [مرگبار] آنان را فراگرفت."
        }
      ]
    },
    {
      "id": 1886,
      "verse_number": 84,
      "verse_key": "15:84",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924551,
          "resource_id": 135,
          "text": "و آنچه [از اموال و خانه‌های محکم] به دست آورده بودند، سودی به حالشان نداشت [و عذاب الهی را دفع نکرد]."
        }
      ]
    },
    {
      "id": 1887,
      "verse_number": 85,
      "verse_key": "15:85",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924552,
          "resource_id": 135,
          "text": "و ما آسمان‌ها و زمین و آنچه را که میان آنهاست جز به‌حق نیافریده‌ایم؛ و قیامت قطعاً آمدنی است؛ پس [ای پیامبر، از کافران‌] به نیکویی گذشت کن."
        }
      ]
    },
    {
      "id": 1888,
      "verse_number": 86,
      "verse_key": "15:86",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924553,
          "resource_id": 135,
          "text": "بی‌تردید، پروردگارت همان آفریدگارِ داناست."
        }
      ]
    },
    {
      "id": 1889,
      "verse_number": 87,
      "verse_key": "15:87",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924554,
          "resource_id": 135,
          "text": "و به راستی، ما به تو «سبعُ المثانی» [= سورۀ فاتحه] و قرآن بزرگ را دادیم."
        }
      ]
    },
    {
      "id": 1890,
      "verse_number": 88,
      "verse_key": "15:88",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924555,
          "resource_id": 135,
          "text": "[بنابراین،] هرگز به آنچه [از نعمت‌های دنیوی] که گروه‌هایی از آنان [= کافران] را بهره‌مند کرده‌ایم چشم ندوز و به خاطر [ناسپاسی و شرکِ] آنان اندوهگین نباش و با مؤمنان فروتنی کن."
        }
      ]
    },
    {
      "id": 1891,
      "verse_number": 89,
      "verse_key": "15:89",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924556,
          "resource_id": 135,
          "text": "و بگو: «به راستی که من همان بیم‌دهندۀ آشکارم»."
        }
      ]
    },
    {
      "id": 1892,
      "verse_number": 90,
      "verse_key": "15:90",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 266,
      "juz_number": 14,
      "translations": [
        {
          "id": 924557,
          "resource_id": 135,
          "text": "[و آنان را از عذاب بترسان] همان گونه که [آن را] بر تقسیم‌کنندگان [آیات الهی] فرستادیم؛"
        }
      ]
    },
    {
      "id": 1893,
      "verse_number": 91,
      "verse_key": "15:91",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924558,
          "resource_id": 135,
          "text": "همان کسانی كه قرآن را بخش بخش کردند [و آن را شعر، سحر، کذب، و اساطیر ‌نامیدند]."
        }
      ]
    },
    {
      "id": 1894,
      "verse_number": 92,
      "verse_key": "15:92",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924559,
          "resource_id": 135,
          "text": "سوگند به پروردگارت، قطعاً [در قیامت] از همۀ آنان سؤال خواهیم کرد،"
        }
      ]
    },
    {
      "id": 1895,
      "verse_number": 93,
      "verse_key": "15:93",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924560,
          "resource_id": 135,
          "text": "از آنچه می‌کردند."
        }
      ]
    },
    {
      "id": 1896,
      "verse_number": 94,
      "verse_key": "15:94",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924561,
          "resource_id": 135,
          "text": "پس [ای پیامبر،] آنچه [را که از سوی الله] دستور یافته‌ای، آشکار کن و از مشرکان روی بگردان‌."
        }
      ]
    },
    {
      "id": 1897,
      "verse_number": 95,
      "verse_key": "15:95",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924562,
          "resource_id": 135,
          "text": "بی‌تردید، ما [شرّ] مسخره‌کنندگان را از تو دور می‌کنیم."
        }
      ]
    },
    {
      "id": 1898,
      "verse_number": 96,
      "verse_key": "15:96",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924563,
          "resource_id": 135,
          "text": "همان کسانی که [برای خود،] با الله، معبود دیگری قرار می‌دهند؛ پس به زودی [نتیجۀ شرکِ خویش را] خواهند دانست."
        }
      ]
    },
    {
      "id": 1899,
      "verse_number": 97,
      "verse_key": "15:97",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924564,
          "resource_id": 135,
          "text": "و [ای پیامبر،] یقیناً ما می‌دانیم که تو از آنچه آنان [= کافران] می‌گویند آزرده‌خاطر می‌گردی."
        }
      ]
    },
    {
      "id": 1900,
      "verse_number": 98,
      "verse_key": "15:98",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924565,
          "resource_id": 135,
          "text": "پس به ستایش پروردگارت تسبیح بگو و از سجده‌کنندگان باش."
        }
      ]
    },
    {
      "id": 1901,
      "verse_number": 99,
      "verse_key": "15:99",
      "hizb_number": 27,
      "rub_el_hizb_number": 106,
      "ruku_number": 223,
      "manzil_number": 3,
      "sajdah_number": null,
      "page_number": 267,
      "juz_number": 14,
      "translations": [
        {
          "id": 924566,
          "resource_id": 135,
          "text": "و تا هنگامی‌ که مرگت فرامی‌رسد پروردگارت را عبادت کن."
        }
      ]
    }
  ]
}