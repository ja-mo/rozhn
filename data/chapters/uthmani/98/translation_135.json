{
  "id": 98,
  "name": "The Clear Proof",
  "verses": [
    {
      "id": 6131,
      "verse_number": 1,
      "verse_key": "98:1",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 598,
      "juz_number": 30,
      "translations": [
        {
          "id": 928796,
          "resource_id": 135,
          "text": "کسانی از اهل کتاب و مشرکان ‌که کافر شدند، [از آیین کفر] دست برنمی‌دارند تا اینکه دلیل روشنی برایشان بیاید."
        }
      ]
    },
    {
      "id": 6132,
      "verse_number": 2,
      "verse_key": "98:2",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 598,
      "juz_number": 30,
      "translations": [
        {
          "id": 928797,
          "resource_id": 135,
          "text": "پیامبری از سوی الله [بیاید] که صحیفه‌های پاک را بخواند."
        }
      ]
    },
    {
      "id": 6133,
      "verse_number": 3,
      "verse_key": "98:3",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 598,
      "juz_number": 30,
      "translations": [
        {
          "id": 928798,
          "resource_id": 135,
          "text": "و نوشته‌هایی استوار [و درست] در آن [صحیفه‌ها] است."
        }
      ]
    },
    {
      "id": 6134,
      "verse_number": 4,
      "verse_key": "98:4",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 598,
      "juz_number": 30,
      "translations": [
        {
          "id": 928799,
          "resource_id": 135,
          "text": "و کسانی‌ که به آنان کتاب داده شد [از جمله یهود و نصاری] پراکنده نشدند [و اختلاف نکردند،] مگر بعد از آنکه دلیل روشن برایشان آمد."
        }
      ]
    },
    {
      "id": 6135,
      "verse_number": 5,
      "verse_key": "98:5",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 598,
      "juz_number": 30,
      "translations": [
        {
          "id": 928800,
          "resource_id": 135,
          "text": "و آنان فرمان نیافتند جز اینکه الله را عبادت کنند در حالی ‌که دین [خود] را برای او خالص گردانند [و از شرک و عبادت معبودان باطل،] به توحید روی آورند؛ و نماز برپا دارند و زکات بپردازند؛ و این است آیین راستین و مستقیم."
        }
      ]
    },
    {
      "id": 6136,
      "verse_number": 6,
      "verse_key": "98:6",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 598,
      "juz_number": 30,
      "translations": [
        {
          "id": 928801,
          "resource_id": 135,
          "text": "بی‌گمان، کسانی از اهل کتاب و مشرکان ‌که کافر شدند، جاودانه در آتش جهنم خواهند ماند. آنان بدترینِ آفریدگان هستند."
        }
      ]
    },
    {
      "id": 6137,
      "verse_number": 7,
      "verse_key": "98:7",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 598,
      "juz_number": 30,
      "translations": [
        {
          "id": 928802,
          "resource_id": 135,
          "text": "همانا کسانی که ایمان آوردند و کارهای شایسته انجام دادند، آنان بهترینِ آفریدگان هستند."
        }
      ]
    },
    {
      "id": 6138,
      "verse_number": 8,
      "verse_key": "98:8",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 542,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928803,
          "resource_id": 135,
          "text": "پاداش آنان نزد پروردگار‌شان، باغ‌های [بهشت] جاویدان است که جویبارها از زیر [درختان] آن جاری است؛ همیشه در آن خواهند ماند؛ الله از [اعمال] آنها راضی است و آنان [نیز] از [پاداشِ] او راضیند؛ و این [مقام و پاداش،] برای کسی است که از پروردگارش بترسد."
        }
      ]
    }
  ]
}