{
  "id": 71,
  "name": "Noah",
  "verses": [
    {
      "id": 5420,
      "verse_number": 1,
      "verse_key": "71:1",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928085,
          "resource_id": 135,
          "text": "بی‌گمان، ما نوح را به سوی قومش فرستادیم [و گفتیم]: «قوم خود را ـ پیش از آنکه عذاب دردناک به سراغشان آید ـ هشدار ده [و بترسان]."
        }
      ]
    },
    {
      "id": 5421,
      "verse_number": 2,
      "verse_key": "71:2",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928086,
          "resource_id": 135,
          "text": "[نوح] گفت: «ای قوم، من بیم‌دهنده‌ای آشکار برایتان هستم،"
        }
      ]
    },
    {
      "id": 5422,
      "verse_number": 3,
      "verse_key": "71:3",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928087,
          "resource_id": 135,
          "text": "که الله را عبادت کنید، و از او بترسید، و مطیع [دستورهای] من باشید."
        }
      ]
    },
    {
      "id": 5423,
      "verse_number": 4,
      "verse_key": "71:4",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928088,
          "resource_id": 135,
          "text": "[که اگر چنین کردید، الله] گناهانتان را می‌آمرزد و تا زمان معیّنی به شما مهلت می‌دهد؛ زیرا هنگامی که اجل الهی فرا رسد، تأخیر نخواهد داشت، اگر می‌دانستید»."
        }
      ]
    },
    {
      "id": 5424,
      "verse_number": 5,
      "verse_key": "71:5",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928089,
          "resource_id": 135,
          "text": "و نوح [پس از نصیحت‌ و دعوت] گفت: «پروردگارا، به راستی که من قومِ خود را شب و روز [به ایمان] دعوت کردم؛"
        }
      ]
    },
    {
      "id": 5425,
      "verse_number": 6,
      "verse_key": "71:6",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928090,
          "resource_id": 135,
          "text": "ولی دعوت من، جز بر گریزشان [از حق] نیفزود"
        }
      ]
    },
    {
      "id": 5426,
      "verse_number": 7,
      "verse_key": "71:7",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928091,
          "resource_id": 135,
          "text": "و من هر چه دعوتشان کردم تا سرانجام آنان را بیامرزی، انگشتان‌ خود را در گوش‌هایشان فرو کردند و لباس‌هایشان را [به خود] پیچیدند و [در مخالفت] اصرار [و پا‌فشاری] کردند و به شدت، گردنکشی و تکبر نمودند."
        }
      ]
    },
    {
      "id": 5427,
      "verse_number": 8,
      "verse_key": "71:8",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928092,
          "resource_id": 135,
          "text": "سپس آنها را با صدای بلند [و آشکار] دعوت کردم."
        }
      ]
    },
    {
      "id": 5428,
      "verse_number": 9,
      "verse_key": "71:9",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928093,
          "resource_id": 135,
          "text": "به علاوه، آشکارا برایشان گفتم و در نهان برای [هرکدام از] آنان بیان کردم."
        }
      ]
    },
    {
      "id": 5429,
      "verse_number": 10,
      "verse_key": "71:10",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 570,
      "juz_number": 29,
      "translations": [
        {
          "id": 928094,
          "resource_id": 135,
          "text": "گفتم: «از پروردگار خویش آمرزش بخواهید [که] بی‌گمان، او بسیار آمرزنده است."
        }
      ]
    },
    {
      "id": 5430,
      "verse_number": 11,
      "verse_key": "71:11",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928095,
          "resource_id": 135,
          "text": "تا از آسمان [باران] پیاپی بر شما بفرستد."
        }
      ]
    },
    {
      "id": 5431,
      "verse_number": 12,
      "verse_key": "71:12",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928096,
          "resource_id": 135,
          "text": "و شما را با اموال و فرزندانِ بسیار یاری کند، به شما باغ‌های [سرسبز] بدهد و جویبارها[ی جاری] برایتان قرار دهد."
        }
      ]
    },
    {
      "id": 5432,
      "verse_number": 13,
      "verse_key": "71:13",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928097,
          "resource_id": 135,
          "text": "شما را چه شده است که از عظمت [و شکوه] الله نمی‌ترسید؟"
        }
      ]
    },
    {
      "id": 5433,
      "verse_number": 14,
      "verse_key": "71:14",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928098,
          "resource_id": 135,
          "text": "در حالی ‌که شما را طی مراحل گوناگون آفرید."
        }
      ]
    },
    {
      "id": 5434,
      "verse_number": 15,
      "verse_key": "71:15",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928099,
          "resource_id": 135,
          "text": "آیا نمی‌بینید که الله چگونه هفت آسمان را بر فراز یکدیگر آفرید؟"
        }
      ]
    },
    {
      "id": 5435,
      "verse_number": 16,
      "verse_key": "71:16",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928100,
          "resource_id": 135,
          "text": "و ماه را در میان آسمان‌ها مایۀ روشنایی قرار داد، و خورشید را چراغ [فروزانی] گردانید؟"
        }
      ]
    },
    {
      "id": 5436,
      "verse_number": 17,
      "verse_key": "71:17",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928101,
          "resource_id": 135,
          "text": "و الله شما را همچون گیاهی از زمین رویانید."
        }
      ]
    },
    {
      "id": 5437,
      "verse_number": 18,
      "verse_key": "71:18",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928102,
          "resource_id": 135,
          "text": "سپس شما را به آن [زمین] بازمی‌گرداند و بار دیگر شما را بیرون می‌آورَد."
        }
      ]
    },
    {
      "id": 5438,
      "verse_number": 19,
      "verse_key": "71:19",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928103,
          "resource_id": 135,
          "text": "و الله زمین را برای شما گسترده ساخت."
        }
      ]
    },
    {
      "id": 5439,
      "verse_number": 20,
      "verse_key": "71:20",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 506,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928104,
          "resource_id": 135,
          "text": "تا از راه‌های پهناورِ آن [به سوی مقصد خود] رفت و آمد کنید»."
        }
      ]
    },
    {
      "id": 5440,
      "verse_number": 21,
      "verse_key": "71:21",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928105,
          "resource_id": 135,
          "text": "نوح گفت: «پروردگارا، آنها از من نافرمانی نمودند و از کسی پیروی کردند که مال و فرزندش، چیزی جز زیانکاری بر او نیفزوده است."
        }
      ]
    },
    {
      "id": 5441,
      "verse_number": 22,
      "verse_key": "71:22",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928106,
          "resource_id": 135,
          "text": "و [آن پیشوایان گمراه،] نیرنگِ بزرگی به کار بردند"
        }
      ]
    },
    {
      "id": 5442,
      "verse_number": 23,
      "verse_key": "71:23",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928107,
          "resource_id": 135,
          "text": "و گفتند: معبودان خود را رها نکنید؛ و [به خصوص] «وَدّ» و «سَواع» و «یَغوث» و «یَعوق» و «نَسر» را [رها نکنید]."
        }
      ]
    },
    {
      "id": 5443,
      "verse_number": 24,
      "verse_key": "71:24",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928108,
          "resource_id": 135,
          "text": "به راستی آنها بسیاری را گمراه کردند؛ و [تو ای پروردگار،] ستمکاران را جز گمراهی میفزای»."
        }
      ]
    },
    {
      "id": 5444,
      "verse_number": 25,
      "verse_key": "71:25",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928109,
          "resource_id": 135,
          "text": "[سرانجام، آنان] به کیفرِ گناهانشان [همگی] غرق شدند؛ آنگاه در آتش [دوزخ] درآورده شدند و در برابر [عذاب] الهی، یاور [و مددکاری] برای خود نیافتند."
        }
      ]
    },
    {
      "id": 5445,
      "verse_number": 26,
      "verse_key": "71:26",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928110,
          "resource_id": 135,
          "text": "نوح گفت: «پروردگارا، هیچ‌یک از کافران را بر روی زمین باقی مگذار."
        }
      ]
    },
    {
      "id": 5446,
      "verse_number": 27,
      "verse_key": "71:27",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928111,
          "resource_id": 135,
          "text": "چرا که اگر آنها را باقی گذاری، بندگانت را گمراه می‌کنند و جز [نسلی] بدکار و کافر به وجود نمی‌آورند."
        }
      ]
    },
    {
      "id": 5447,
      "verse_number": 28,
      "verse_key": "71:28",
      "hizb_number": 57,
      "rub_el_hizb_number": 228,
      "ruku_number": 507,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 571,
      "juz_number": 29,
      "translations": [
        {
          "id": 928112,
          "resource_id": 135,
          "text": "پروردگارا، مرا و پدر و مادرم و هر کسی را که با ایمان وارد خانۀ من شود، و [تمام] مردان مؤمن و زنان مؤمن را بیامرز؛ و ستمکاران را جز هلاکت [و نابودی] میفزای»."
        }
      ]
    }
  ]
}