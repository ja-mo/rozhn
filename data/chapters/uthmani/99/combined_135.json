{
  "id": 99,
  "name": "The Earthquake",
  "verses": [
    {
      "id": 6139,
      "verse_number": 1,
      "verse_key": "99:1",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": " إِذَا زُلْزِلَتِ ٱلْأَرْضُ زِلْزَالَهَا",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928804,
          "resource_id": 135,
          "text": "هنگامی که زمین با شدید‌ترین تکان‌هایش به لرزه درآید."
        }
      ]
    },
    {
      "id": 6140,
      "verse_number": 2,
      "verse_key": "99:2",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَأَخْرَجَتِ ٱلْأَرْضُ أَثْقَالَهَا",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928805,
          "resource_id": 135,
          "text": "و زمین بار‌های سنگینش را بیرون ریزد."
        }
      ]
    },
    {
      "id": 6141,
      "verse_number": 3,
      "verse_key": "99:3",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَقَالَ ٱلْإِنسَـٰنُ مَا لَهَا",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928806,
          "resource_id": 135,
          "text": "و انسان می‌گوید: «آن [= زمین] را چه شده است؟»"
        }
      ]
    },
    {
      "id": 6142,
      "verse_number": 4,
      "verse_key": "99:4",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "يَوْمَئِذٍ تُحَدِّثُ أَخْبَارَهَا",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928807,
          "resource_id": 135,
          "text": "در آن روز، [زمین] تمام خبرهایش را بازگو می‌کند؛"
        }
      ]
    },
    {
      "id": 6143,
      "verse_number": 5,
      "verse_key": "99:5",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "بِأَنَّ رَبَّكَ أَوْحَىٰ لَهَا",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928808,
          "resource_id": 135,
          "text": "زیرا که پروردگارت به او [چنین] وحی [و حکم] کرده است."
        }
      ]
    },
    {
      "id": 6144,
      "verse_number": 6,
      "verse_key": "99:6",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "يَوْمَئِذٍ يَصْدُرُ ٱلنَّاسُ أَشْتَاتًا لِّيُرَوْا۟ أَعْمَـٰلَهُمْ",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928809,
          "resource_id": 135,
          "text": "در آن روز، مردم گروه‌گروه باز می‌گردند تا [نتیجۀ] اعمالشان به آنان نشان داده شود."
        }
      ]
    },
    {
      "id": 6145,
      "verse_number": 7,
      "verse_key": "99:7",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "فَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ خَيْرًا يَرَهُۥ",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928810,
          "resource_id": 135,
          "text": "آنگاه هر کس به‌ اندازۀ ذره‌ای کار نیک انجام داده باشد، [پاداشِ] آن را می‌بیند؛"
        }
      ]
    },
    {
      "id": 6146,
      "verse_number": 8,
      "verse_key": "99:8",
      "hizb_number": 60,
      "rub_el_hizb_number": 239,
      "ruku_number": 543,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ شَرًّا يَرَهُۥ",
      "page_number": 599,
      "juz_number": 30,
      "translations": [
        {
          "id": 928811,
          "resource_id": 135,
          "text": "و هر کس به اندازه ذره‌ای کار بد کرده باشد، [کیفرِ] آن را می‌بیند."
        }
      ]
    }
  ]
}