{
  "id": 44,
  "name": "The Smoke",
  "verses": [
    {
      "id": 4415,
      "verse_number": 1,
      "verse_key": "44:1",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": " حمٓ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927080,
          "resource_id": 135,
          "text": "حم [حا. میم]."
        }
      ]
    },
    {
      "id": 4416,
      "verse_number": 2,
      "verse_key": "44:2",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَٱلْكِتَـٰبِ ٱلْمُبِينِ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927081,
          "resource_id": 135,
          "text": "و سوگند به کتاب روشنگر."
        }
      ]
    },
    {
      "id": 4417,
      "verse_number": 3,
      "verse_key": "44:3",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنَّآ أَنزَلْنَـٰهُ فِى لَيْلَةٍ مُّبَـٰرَكَةٍ ۚ إِنَّا كُنَّا مُنذِرِينَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927082,
          "resource_id": 135,
          "text": "[که] ما قرآن را در شب مبارک [و فرخندۀ قدر] نازل کردیم [زیرا] که ما [همواره] هشداردهنده بوده‌ایم."
        }
      ]
    },
    {
      "id": 4418,
      "verse_number": 4,
      "verse_key": "44:4",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فِيهَا يُفْرَقُ كُلُّ أَمْرٍ حَكِيمٍ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927083,
          "resource_id": 135,
          "text": "در آن [شب،] هر امر مهمى فیصله مى‌یابد [و تدبیر می‌شود]."
        }
      ]
    },
    {
      "id": 4419,
      "verse_number": 5,
      "verse_key": "44:5",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "أَمْرًا مِّنْ عِندِنَآ ۚ إِنَّا كُنَّا مُرْسِلِينَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927084,
          "resource_id": 135,
          "text": "[این‌] كارى است [كه‌] از جانب ما [صورت مى‌گیرد] بى‌گمان، ما فرستنده[ی پیامبران] بوده‌ایم."
        }
      ]
    },
    {
      "id": 4420,
      "verse_number": 6,
      "verse_key": "44:6",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "رَحْمَةً مِّن رَّبِّكَ ۚ إِنَّهُۥ هُوَ ٱلسَّمِيعُ ٱلْعَلِيمُ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927085,
          "resource_id": 135,
          "text": "به عنوان رحمتى از پروردگارت. بی‌تردید، او شنوای داناست."
        }
      ]
    },
    {
      "id": 4421,
      "verse_number": 7,
      "verse_key": "44:7",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "رَبِّ ٱلسَّمَـٰوَٰتِ وَٱلْأَرْضِ وَمَا بَيْنَهُمَآ ۖ إِن كُنتُم مُّوقِنِينَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927086,
          "resource_id": 135,
          "text": "پروردگار آسمان‌ها و زمین و آنچه میان آنهاست. اگر [به این حقیقت] یقین دارید [به الله و پیامبرش ایمان بیاورید]."
        }
      ]
    },
    {
      "id": 4422,
      "verse_number": 8,
      "verse_key": "44:8",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "لَآ إِلَـٰهَ إِلَّا هُوَ يُحْىِۦ وَيُمِيتُ ۖ رَبُّكُمْ وَرَبُّ ءَابَآئِكُمُ ٱلْأَوَّلِينَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927087,
          "resource_id": 135,
          "text": "هیچ معبودی [به‌حق] جز او نیست؛ زندگی می‌بخشد و می‌میراند؛ پروردگار شما و نیاکان شماست؛"
        }
      ]
    },
    {
      "id": 4423,
      "verse_number": 9,
      "verse_key": "44:9",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "بَلْ هُمْ فِى شَكٍّ يَلْعَبُونَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927088,
          "resource_id": 135,
          "text": "ولى مشرکان تردید دارند و سرگرم [لذت‌های دنیا] و بازى هستند."
        }
      ]
    },
    {
      "id": 4424,
      "verse_number": 10,
      "verse_key": "44:10",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَٱرْتَقِبْ يَوْمَ تَأْتِى ٱلسَّمَآءُ بِدُخَانٍ مُّبِينٍ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927089,
          "resource_id": 135,
          "text": "پس [ای پیامبر] منتظر روزی باش که آسمان، دودی آشکار [پدید] آورد."
        }
      ]
    },
    {
      "id": 4425,
      "verse_number": 11,
      "verse_key": "44:11",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "يَغْشَى ٱلنَّاسَ ۖ هَـٰذَا عَذَابٌ أَلِيمٌ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927090,
          "resource_id": 135,
          "text": "که [تمام] مردم را فرامی‌گیرد. این عذابی دردناک است."
        }
      ]
    },
    {
      "id": 4426,
      "verse_number": 12,
      "verse_key": "44:12",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "رَّبَّنَا ٱكْشِفْ عَنَّا ٱلْعَذَابَ إِنَّا مُؤْمِنُونَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927091,
          "resource_id": 135,
          "text": "[آنگاه کافران می‌گویند:] «پروردگارا، [این] عذاب را از ما برطرف کن که ایمان آورده‌ایم»."
        }
      ]
    },
    {
      "id": 4427,
      "verse_number": 13,
      "verse_key": "44:13",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "أَنَّىٰ لَهُمُ ٱلذِّكْرَىٰ وَقَدْ جَآءَهُمْ رَسُولٌ مُّبِينٌ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927092,
          "resource_id": 135,
          "text": "چگونه [و از کجا] پند می‌پذیرند در حالی که [پیشتر،] پیامبر روشنگر به سویشان آمده بود؟"
        }
      ]
    },
    {
      "id": 4428,
      "verse_number": 14,
      "verse_key": "44:14",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "ثُمَّ تَوَلَّوْا۟ عَنْهُ وَقَالُوا۟ مُعَلَّمٌ مَّجْنُونٌ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927093,
          "resource_id": 135,
          "text": "اما از او روی گرداندند و گفتند: «[او] آموزش‌یافته‌ای دیوانه است»."
        }
      ]
    },
    {
      "id": 4429,
      "verse_number": 15,
      "verse_key": "44:15",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنَّا كَاشِفُوا۟ ٱلْعَذَابِ قَلِيلًا ۚ إِنَّكُمْ عَآئِدُونَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927094,
          "resource_id": 135,
          "text": "[براى آزمایش شما] زمانى ‌اندک عذاب را برمى‌داریم؛ و[لى] شما [به کفرِ خویش] بازمى‌گردید."
        }
      ]
    },
    {
      "id": 4430,
      "verse_number": 16,
      "verse_key": "44:16",
      "hizb_number": 50,
      "rub_el_hizb_number": 198,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "يَوْمَ نَبْطِشُ ٱلْبَطْشَةَ ٱلْكُبْرَىٰٓ إِنَّا مُنتَقِمُونَ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927095,
          "resource_id": 135,
          "text": "روزی که سخت بر آنان می‌تازیم. [آری،] ما [از کافران به خاطر کفر و تکذیبشان،] انتقام‌ می‌گیریم."
        }
      ]
    },
    {
      "id": 4431,
      "verse_number": 17,
      "verse_key": "44:17",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "۞ وَلَقَدْ فَتَنَّا قَبْلَهُمْ قَوْمَ فِرْعَوْنَ وَجَآءَهُمْ رَسُولٌ كَرِيمٌ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927096,
          "resource_id": 135,
          "text": "پیش از آنان نیز قوم فرعون را آزمودیم و پیامبری بزرگوار به سویشان آمد"
        }
      ]
    },
    {
      "id": 4432,
      "verse_number": 18,
      "verse_key": "44:18",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "أَنْ أَدُّوٓا۟ إِلَىَّ عِبَادَ ٱللَّهِ ۖ إِنِّى لَكُمْ رَسُولٌ أَمِينٌ",
      "page_number": 496,
      "juz_number": 25,
      "translations": [
        {
          "id": 927097,
          "resource_id": 135,
          "text": "[که به آنان گفت:] «بندگان الله [= بنی‌اسرائیل‌] را به من بسپارید که من پیامبری امین برایتان هستم."
        }
      ]
    },
    {
      "id": 4433,
      "verse_number": 19,
      "verse_key": "44:19",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَأَن لَّا تَعْلُوا۟ عَلَى ٱللَّهِ ۖ إِنِّىٓ ءَاتِيكُم بِسُلْطَـٰنٍ مُّبِينٍ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927098,
          "resource_id": 135,
          "text": "و [نیز] بر الله برتری مجویید که من دلیل روشنی برایتان آورده‌ام؛"
        }
      ]
    },
    {
      "id": 4434,
      "verse_number": 20,
      "verse_key": "44:20",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَإِنِّى عُذْتُ بِرَبِّى وَرَبِّكُمْ أَن تَرْجُمُونِ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927099,
          "resource_id": 135,
          "text": "و از اینکه سنگسارم کنید به پروردگار خود و پروردگار شما پناه می‌برم."
        }
      ]
    },
    {
      "id": 4435,
      "verse_number": 21,
      "verse_key": "44:21",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَإِن لَّمْ تُؤْمِنُوا۟ لِى فَٱعْتَزِلُونِ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927100,
          "resource_id": 135,
          "text": "اگر به من ایمان نمی‌آورید، از من کناره بگیرید [و رهایم کنید]»."
        }
      ]
    },
    {
      "id": 4436,
      "verse_number": 22,
      "verse_key": "44:22",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَدَعَا رَبَّهُۥٓ أَنَّ هَـٰٓؤُلَآءِ قَوْمٌ مُّجْرِمُونَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927101,
          "resource_id": 135,
          "text": "آنگاه به درگاه پروردگارش دعا کرد که: «[بار الها،] اینان گروهی تبهکارند»."
        }
      ]
    },
    {
      "id": 4437,
      "verse_number": 23,
      "verse_key": "44:23",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَأَسْرِ بِعِبَادِى لَيْلًا إِنَّكُم مُّتَّبَعُونَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927102,
          "resource_id": 135,
          "text": "[به موسی وحی کردیم که:] «بندگانم را شبانه [از مصر] بیرون ببر؛ زیرا [سپاه فرعون] شما را تعقیب خواهند کرد؛"
        }
      ]
    },
    {
      "id": 4438,
      "verse_number": 24,
      "verse_key": "44:24",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَٱتْرُكِ ٱلْبَحْرَ رَهْوًا ۖ إِنَّهُمْ جُندٌ مُّغْرَقُونَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927103,
          "resource_id": 135,
          "text": "و دریا را آرام پشت سر بگذار كه آنان سپاهى هستند كه غرق خواهند شد»."
        }
      ]
    },
    {
      "id": 4439,
      "verse_number": 25,
      "verse_key": "44:25",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "كَمْ تَرَكُوا۟ مِن جَنَّـٰتٍ وَعُيُونٍ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927104,
          "resource_id": 135,
          "text": "چه بسیار باغ‌ها و چشمه‌سارها كه رها كردند [و رفتند]،"
        }
      ]
    },
    {
      "id": 4440,
      "verse_number": 26,
      "verse_key": "44:26",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَزُرُوعٍ وَمَقَامٍ كَرِيمٍ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927105,
          "resource_id": 135,
          "text": "و کشتزارها و قصر‌های نیکو [و زیبا]،"
        }
      ]
    },
    {
      "id": 4441,
      "verse_number": 27,
      "verse_key": "44:27",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَنَعْمَةٍ كَانُوا۟ فِيهَا فَـٰكِهِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927106,
          "resource_id": 135,
          "text": "و نعمتی که در آن شادمان [و بهر‌ه‌مند] بودند."
        }
      ]
    },
    {
      "id": 4442,
      "verse_number": 28,
      "verse_key": "44:28",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "كَذَٰلِكَ ۖ وَأَوْرَثْنَـٰهَا قَوْمًا ءَاخَرِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927107,
          "resource_id": 135,
          "text": "[سرنوشتشان] این گونه [بود] و [تمامى] آن نعمت‌ها را به گروهى دیگر واگذاشتیم."
        }
      ]
    },
    {
      "id": 4443,
      "verse_number": 29,
      "verse_key": "44:29",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 433,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَمَا بَكَتْ عَلَيْهِمُ ٱلسَّمَآءُ وَٱلْأَرْضُ وَمَا كَانُوا۟ مُنظَرِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927108,
          "resource_id": 135,
          "text": "آسمان و زمین قطرۀ اشکی بر [نابودى] آنان نریخت و مهلتى [برای توبه] نیز نیافتند."
        }
      ]
    },
    {
      "id": 4444,
      "verse_number": 30,
      "verse_key": "44:30",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَلَقَدْ نَجَّيْنَا بَنِىٓ إِسْرَٰٓءِيلَ مِنَ ٱلْعَذَابِ ٱلْمُهِينِ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927109,
          "resource_id": 135,
          "text": "بی‌تردید، بنی‌اسرائیل را از عذاب خفت‌بار نجات دادیم؛"
        }
      ]
    },
    {
      "id": 4445,
      "verse_number": 31,
      "verse_key": "44:31",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "مِن فِرْعَوْنَ ۚ إِنَّهُۥ كَانَ عَالِيًا مِّنَ ٱلْمُسْرِفِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927110,
          "resource_id": 135,
          "text": "از فرعون که [رهبر] سرکشی در زمرۀ اسرافکاران بود."
        }
      ]
    },
    {
      "id": 4446,
      "verse_number": 32,
      "verse_key": "44:32",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَلَقَدِ ٱخْتَرْنَـٰهُمْ عَلَىٰ عِلْمٍ عَلَى ٱلْعَـٰلَمِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927111,
          "resource_id": 135,
          "text": "ما با دانشِ خود بنی‌اسرائیل را بر مردم زمانه برترى دادیم،"
        }
      ]
    },
    {
      "id": 4447,
      "verse_number": 33,
      "verse_key": "44:33",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَءَاتَيْنَـٰهُم مِّنَ ٱلْـَٔايَـٰتِ مَا فِيهِ بَلَـٰٓؤٌا۟ مُّبِينٌ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927112,
          "resource_id": 135,
          "text": "و نشانه‌هایى [از قدرت خویش] در اختیارشان گذاشتیم كه آزمایشى روشن در آن بود."
        }
      ]
    },
    {
      "id": 4448,
      "verse_number": 34,
      "verse_key": "44:34",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ هَـٰٓؤُلَآءِ لَيَقُولُونَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927113,
          "resource_id": 135,
          "text": "این [کافران] مى‌گویند:"
        }
      ]
    },
    {
      "id": 4449,
      "verse_number": 35,
      "verse_key": "44:35",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنْ هِىَ إِلَّا مَوْتَتُنَا ٱلْأُولَىٰ وَمَا نَحْنُ بِمُنشَرِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927114,
          "resource_id": 135,
          "text": "«جز مرگِ نخستینِ ما، هیچ [زندگیِ دیگری] نیست و هرگز برانگیخته نخواهیم شد؛"
        }
      ]
    },
    {
      "id": 4450,
      "verse_number": 36,
      "verse_key": "44:36",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَأْتُوا۟ بِـَٔابَآئِنَآ إِن كُنتُمْ صَـٰدِقِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927115,
          "resource_id": 135,
          "text": "و اگر راست می‌گویید، نیاکانمان را [زنده کنید و] بیاورید»."
        }
      ]
    },
    {
      "id": 4451,
      "verse_number": 37,
      "verse_key": "44:37",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "أَهُمْ خَيْرٌ أَمْ قَوْمُ تُبَّعٍ وَٱلَّذِينَ مِن قَبْلِهِمْ ۚ أَهْلَكْنَـٰهُمْ ۖ إِنَّهُمْ كَانُوا۟ مُجْرِمِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927116,
          "resource_id": 135,
          "text": "آیا اینان بهترند یا قوم [نیرومندِ] «تُبَّع» و پیشینیان آنها كه چون بزهكار بودند آنان را نابود كردیم؟"
        }
      ]
    },
    {
      "id": 4452,
      "verse_number": 38,
      "verse_key": "44:38",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "وَمَا خَلَقْنَا ٱلسَّمَـٰوَٰتِ وَٱلْأَرْضَ وَمَا بَيْنَهُمَا لَـٰعِبِينَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927117,
          "resource_id": 135,
          "text": "ما آسمان‌ها و زمین و آنچه را که میان آنهاست به بازی نیافریده‌ایم؛"
        }
      ]
    },
    {
      "id": 4453,
      "verse_number": 39,
      "verse_key": "44:39",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "مَا خَلَقْنَـٰهُمَآ إِلَّا بِٱلْحَقِّ وَلَـٰكِنَّ أَكْثَرَهُمْ لَا يَعْلَمُونَ",
      "page_number": 497,
      "juz_number": 25,
      "translations": [
        {
          "id": 927118,
          "resource_id": 135,
          "text": "آنها را به‌حق [و با هدف] آفریده‌ایم؛ ولى بیشتر آنان نمى‌دانند."
        }
      ]
    },
    {
      "id": 4454,
      "verse_number": 40,
      "verse_key": "44:40",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ يَوْمَ ٱلْفَصْلِ مِيقَـٰتُهُمْ أَجْمَعِينَ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927119,
          "resource_id": 135,
          "text": "بی‌تردید، روزِ داوری [= قیامت] وعده‌گاه همۀ آنان است."
        }
      ]
    },
    {
      "id": 4455,
      "verse_number": 41,
      "verse_key": "44:41",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "يَوْمَ لَا يُغْنِى مَوْلًى عَن مَّوْلًى شَيْـًٔا وَلَا هُمْ يُنصَرُونَ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927120,
          "resource_id": 135,
          "text": "روزى كه هیچ دوستى براى دوست خود سودمند نیست و [از هیچ سو] یارى نمی‌شوند؛"
        }
      ]
    },
    {
      "id": 4456,
      "verse_number": 42,
      "verse_key": "44:42",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 434,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِلَّا مَن رَّحِمَ ٱللَّهُ ۚ إِنَّهُۥ هُوَ ٱلْعَزِيزُ ٱلرَّحِيمُ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927121,
          "resource_id": 135,
          "text": "مگر كسى كه الله [بر او] رحم كند كه او تعالی شکست‌ناپذیرِ مهربان است."
        }
      ]
    },
    {
      "id": 4457,
      "verse_number": 43,
      "verse_key": "44:43",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ شَجَرَتَ ٱلزَّقُّومِ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927122,
          "resource_id": 135,
          "text": "بی‌گمان، درخت زَقّوم،"
        }
      ]
    },
    {
      "id": 4458,
      "verse_number": 44,
      "verse_key": "44:44",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "طَعَامُ ٱلْأَثِيمِ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927123,
          "resource_id": 135,
          "text": "غذای گناهکاران است."
        }
      ]
    },
    {
      "id": 4459,
      "verse_number": 45,
      "verse_key": "44:45",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "كَٱلْمُهْلِ يَغْلِى فِى ٱلْبُطُونِ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927124,
          "resource_id": 135,
          "text": "[میوه‌اش، به سبب گرمای زیاد،] همچون مسِ گداخته در شکم‌ها می‌جوشد؛"
        }
      ]
    },
    {
      "id": 4460,
      "verse_number": 46,
      "verse_key": "44:46",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "كَغَلْىِ ٱلْحَمِيمِ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927125,
          "resource_id": 135,
          "text": "مانند جوششِ آب داغ."
        }
      ]
    },
    {
      "id": 4461,
      "verse_number": 47,
      "verse_key": "44:47",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "خُذُوهُ فَٱعْتِلُوهُ إِلَىٰ سَوَآءِ ٱلْجَحِيمِ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927126,
          "resource_id": 135,
          "text": "[خطاب مى‌رسد:] «آن [ستمکار] را بگیرید و به میان دوزخ درافكنید؛"
        }
      ]
    },
    {
      "id": 4462,
      "verse_number": 48,
      "verse_key": "44:48",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "ثُمَّ صُبُّوا۟ فَوْقَ رَأْسِهِۦ مِنْ عَذَابِ ٱلْحَمِيمِ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927127,
          "resource_id": 135,
          "text": "آنگاه از عذاب آب داغ بر سرش فروریزید»."
        }
      ]
    },
    {
      "id": 4463,
      "verse_number": 49,
      "verse_key": "44:49",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "ذُقْ إِنَّكَ أَنتَ ٱلْعَزِيزُ ٱلْكَرِيمُ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927128,
          "resource_id": 135,
          "text": "[در آن حال، به او گفته می‌شود:] «بچش که تو [در میان قوم خود] عزتمند و بزرگواری."
        }
      ]
    },
    {
      "id": 4464,
      "verse_number": 50,
      "verse_key": "44:50",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ هَـٰذَا مَا كُنتُم بِهِۦ تَمْتَرُونَ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927129,
          "resource_id": 135,
          "text": "این همان [سرنوشت دردناکی] است که در موردش تردید داشتید»."
        }
      ]
    },
    {
      "id": 4465,
      "verse_number": 51,
      "verse_key": "44:51",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ ٱلْمُتَّقِينَ فِى مَقَامٍ أَمِينٍ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927130,
          "resource_id": 135,
          "text": "یقیناً پرهیزگاران در جایگاه امنی هستند؛"
        }
      ]
    },
    {
      "id": 4466,
      "verse_number": 52,
      "verse_key": "44:52",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فِى جَنَّـٰتٍ وَعُيُونٍ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927131,
          "resource_id": 135,
          "text": "در [میان] باغ‌ها و [کنار] چشمه‌سار‌های بهشت."
        }
      ]
    },
    {
      "id": 4467,
      "verse_number": 53,
      "verse_key": "44:53",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "يَلْبَسُونَ مِن سُندُسٍ وَإِسْتَبْرَقٍ مُّتَقَـٰبِلِينَ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927132,
          "resource_id": 135,
          "text": "لباس‌هایی از دیبای نازک و دیبای ضخیم می‌پوشند، در حالى كه رویاروى یكدیگر [به صحبت] نشسته‌اند."
        }
      ]
    },
    {
      "id": 4468,
      "verse_number": 54,
      "verse_key": "44:54",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "كَذَٰلِكَ وَزَوَّجْنَـٰهُم بِحُورٍ عِينٍ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927133,
          "resource_id": 135,
          "text": "چنین است [وضع آنان]؛ و [نیز] حور العین را به همسری آنان درمی‌آوریم."
        }
      ]
    },
    {
      "id": 4469,
      "verse_number": 55,
      "verse_key": "44:55",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "يَدْعُونَ فِيهَا بِكُلِّ فَـٰكِهَةٍ ءَامِنِينَ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927134,
          "resource_id": 135,
          "text": "در آنجا هر میوه‌اى كه اراده کنند، بى دغدغه در اختیارشان است."
        }
      ]
    },
    {
      "id": 4470,
      "verse_number": 56,
      "verse_key": "44:56",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "لَا يَذُوقُونَ فِيهَا ٱلْمَوْتَ إِلَّا ٱلْمَوْتَةَ ٱلْأُولَىٰ ۖ وَوَقَىٰهُمْ عَذَابَ ٱلْجَحِيمِ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927135,
          "resource_id": 135,
          "text": "در بهشت طعم مرگ را نخواهند چشید؛ جز همان مرگ نخستین [در دنیا]؛ و [پروردگار مهربان] آنان را از مجازات دوزخ محفوظ می‌دارد."
        }
      ]
    },
    {
      "id": 4471,
      "verse_number": 57,
      "verse_key": "44:57",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَضْلًا مِّن رَّبِّكَ ۚ ذَٰلِكَ هُوَ ٱلْفَوْزُ ٱلْعَظِيمُ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927136,
          "resource_id": 135,
          "text": "[این] بخششی است از [جانب] پروردگارت؛ و این همان کامیابی بزرگ است."
        }
      ]
    },
    {
      "id": 4472,
      "verse_number": 58,
      "verse_key": "44:58",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَإِنَّمَا يَسَّرْنَـٰهُ بِلِسَانِكَ لَعَلَّهُمْ يَتَذَكَّرُونَ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927137,
          "resource_id": 135,
          "text": "[ای پیامبر،] ما قرآن را به زبان تو روان [و آسان] ساختیم؛ باشد که [مشرکان] پند گیرند."
        }
      ]
    },
    {
      "id": 4473,
      "verse_number": 59,
      "verse_key": "44:59",
      "hizb_number": 50,
      "rub_el_hizb_number": 199,
      "ruku_number": 435,
      "manzil_number": 6,
      "sajdah_number": null,
      "text_uthmani": "فَٱرْتَقِبْ إِنَّهُم مُّرْتَقِبُونَ",
      "page_number": 498,
      "juz_number": 25,
      "translations": [
        {
          "id": 927138,
          "resource_id": 135,
          "text": "پس در انتظار [وعده‌های الهی] باش که بی‌گمان، آنان [نیز] منتظر [شکست و مرگ تو] هستند."
        }
      ]
    }
  ]
}