{
  "id": 91,
  "name": "The Sun",
  "verses": [
    {
      "id": 6044,
      "verse_number": 1,
      "verse_key": "91:1",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928709,
          "resource_id": 135,
          "text": "سوگند به خورشید و روشنیِ آن [به هنگام بامداد]،"
        }
      ]
    },
    {
      "id": 6045,
      "verse_number": 2,
      "verse_key": "91:2",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928710,
          "resource_id": 135,
          "text": "و سوگند به ماه، هنگامی که بعد از آن [= خورشید] در‌آید،"
        }
      ]
    },
    {
      "id": 6046,
      "verse_number": 3,
      "verse_key": "91:3",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928711,
          "resource_id": 135,
          "text": "و سوگند به روز، هنگامی‌ که آن [= خورشید] را روشن [و جلوه‌گر] کند،"
        }
      ]
    },
    {
      "id": 6047,
      "verse_number": 4,
      "verse_key": "91:4",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928712,
          "resource_id": 135,
          "text": "و سوگند به شب، هنگامی که آن را بپوشانَد،"
        }
      ]
    },
    {
      "id": 6048,
      "verse_number": 5,
      "verse_key": "91:5",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928713,
          "resource_id": 135,
          "text": "و سوگند به آسمان و به ذاتی که آن را بنا کرد،"
        }
      ]
    },
    {
      "id": 6049,
      "verse_number": 6,
      "verse_key": "91:6",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928714,
          "resource_id": 135,
          "text": "و سوگند به زمین و به ذاتی که آن را گسترانید،"
        }
      ]
    },
    {
      "id": 6050,
      "verse_number": 7,
      "verse_key": "91:7",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928715,
          "resource_id": 135,
          "text": "و سوگند به جانِ [انسان] و ذاتی که آن را [آفرید و] نیکو گردانید،"
        }
      ]
    },
    {
      "id": 6051,
      "verse_number": 8,
      "verse_key": "91:8",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928716,
          "resource_id": 135,
          "text": "سپس نافرمانی و پرهیزگاری‌اش را [به او] الهام کرد."
        }
      ]
    },
    {
      "id": 6052,
      "verse_number": 9,
      "verse_key": "91:9",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928717,
          "resource_id": 135,
          "text": "بی‌تردید، هر کس نفس خود را [از گناهان] پاک کند، رستگار می‌شود."
        }
      ]
    },
    {
      "id": 6053,
      "verse_number": 10,
      "verse_key": "91:10",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928718,
          "resource_id": 135,
          "text": "و هر کس آن را [با گناه] آلوده سازد، یقیناً زیانکار می‌شود."
        }
      ]
    },
    {
      "id": 6054,
      "verse_number": 11,
      "verse_key": "91:11",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928719,
          "resource_id": 135,
          "text": "[قوم] ثمود از روی سرکشی، [پیامبر‌شان را] تکذیب کردند،"
        }
      ]
    },
    {
      "id": 6055,
      "verse_number": 12,
      "verse_key": "91:12",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928720,
          "resource_id": 135,
          "text": "آنگاه که بدکار‌ترین آنان [برای اقدام به جنایت] برخاست."
        }
      ]
    },
    {
      "id": 6056,
      "verse_number": 13,
      "verse_key": "91:13",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928721,
          "resource_id": 135,
          "text": "پیامبر الله [= صالح] به آنان گفت: «ماده‌شترِ الله و [نوبت‌] آب‌خوردنش را [حرمت نهید]»."
        }
      ]
    },
    {
      "id": 6057,
      "verse_number": 14,
      "verse_key": "91:14",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928722,
          "resource_id": 135,
          "text": "[ولی آنان] او را تکذیب کردند و آن [ماده‌شتر] را کشتند؛ پس پروردگار آنان به سبب گناهانشان بر سر‌شان عذاب آورد و همگی آنان را با خاک یکسان کرد"
        }
      ]
    },
    {
      "id": 6058,
      "verse_number": 15,
      "verse_key": "91:15",
      "hizb_number": 60,
      "rub_el_hizb_number": 238,
      "ruku_number": 535,
      "manzil_number": 7,
      "sajdah_number": null,
      "page_number": 595,
      "juz_number": 30,
      "translations": [
        {
          "id": 928723,
          "resource_id": 135,
          "text": "و [الله] از سرانجام آن [کار،] بیم ندارد."
        }
      ]
    }
  ]
}